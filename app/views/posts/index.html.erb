<% content_for :seo_title, t('seo.blog.title') %>
<% content_for :seo_description, t('seo.blog.description') %>
<% content_for :seo_keywords, t('seo.blog.keywords') %>

<section class="max-w-5xl mx-auto px-4 py-12">
  <header class="mb-10">
    <h1 class="text-3xl md:text-4xl font-bold text-white mb-4"><%= t('blog.title') %></h1>
    <p class="text-gray-300 text-lg"><%= t('blog.subtitle') %></p>
  </header>

  <% if @posts.any? %>
    <div class="grid gap-6 md:grid-cols-2">
      <% @posts.each do |post| %>
        <article class="bg-gray-800 border border-gray-700 rounded-xl p-6">
          <% if post.category.present? %>
            <div class="text-xs uppercase tracking-wide text-purple-300 mb-2"><%= post.category %></div>
          <% end %>
          <h2 class="text-xl font-semibold text-white mb-2"><%= post.title %></h2>
          <p class="text-gray-300 mb-4"><%= post.excerpt %></p>
          <%= link_to t('blog.read_more'), blog_post_path(post), class: "text-purple-300 hover:text-purple-200" %>
        </article>
      <% end %>
    </div>
  <% else %>
    <div class="grid gap-6 md:grid-cols-2">
      <% Array(t('blog.posts')).each do |post| %>
        <article class="bg-gray-800 border border-gray-700 rounded-xl p-6">
          <div class="text-xs uppercase tracking-wide text-purple-300 mb-2"><%= post[:category] || post['category'] %></div>
          <h2 class="text-xl font-semibold text-white mb-2"><%= post[:title] || post['title'] %></h2>
          <p class="text-gray-300 mb-4"><%= post[:excerpt] || post['excerpt'] %></p>
          <span class="text-sm text-gray-400"><%= post[:read_more] || post['read_more'] %></span>
        </article>
      <% end %>
    </div>
  <% end %>

  <div class="mt-12 text-gray-300">
    <p><%= t('blog.cta') %></p>
    <div class="mt-4 flex flex-wrap gap-4">
      <%= link_to t('blog.cta_playlists'), playlists_path, class: "bg-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-purple-500 transition-colors" %>
      <%= link_to t('blog.cta_contact'), contact_path, class: "border border-purple-500 text-purple-300 px-6 py-3 rounded-lg font-semibold hover:bg-purple-500 hover:text-white transition-colors" %>
    </div>
  </div>
</section>
