          </div>
          <div class="bg-gray-500 bg-opacity-30 rounded-lg p-3 text-center">
            <h3 class="text-gray-300 font-semibold mb-1"><%= t('badges.levels.silver') %></h3>
            <p class="text-white text-sm mb-2"><%= t('badges.levels.intermediate') %></p>
            <span class="bg-gray-700 text-gray-300 text-xs font-semibold px-2.5 py-1 rounded"><%= t('badges.points_label', count: 700) %></span>
          </div>
          <div class="bg-yellow-600 bg-opacity-30 rounded-lg p-3 text-center">
            <h3 class="text-yellow-300 font-semibold mb-1"><%= t('badges.levels.gold') %></h3>
            <p class="text-white text-sm mb-2"><%= t('badges.levels.expert') %></p>
            <span class="bg-yellow-900 text-yellow-300 text-xs font-semibold px-2.5 py-1 rounded"><%= t('badges.points_label', count: 1500) %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Comment gagner des badges -->
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-6 mb-12">
      <h2 class="text-2xl font-light text-white mb-4"><%= t('badges.how_to_earn') %></h2>
      <div class="bg-black bg-opacity-20 rounded-lg p-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div class="bg-white bg-opacity-10 rounded-lg p-4">
            <div class="flex items-center mb-2">
              <svg class="w-5 h-5 mr-2 text-yellow-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <h3 class="text-lg font-semibold text-white"><%= t('badges.earn_methods.participate.title') %></h3>
            </div>
            <p class="text-gray-300"><%= t('badges.earn_methods.participate.description') %></p>
          </div>
          <div class="bg-white bg-opacity-10 rounded-lg p-4">
            <div class="flex items-center mb-2">
              <svg class="w-5 h-5 mr-2 text-yellow-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
