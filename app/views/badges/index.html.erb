    <!-- Récompenses disponibles -->
    <div class="bg-gradient-to-r from-purple-600 to-teal-600 rounded-lg p-6">
      <h2 class="text-2xl font-light text-white mb-4"><%= t('badges.available_rewards') %></h2>
      <div class="bg-black bg-opacity-20 rounded-lg p-4 mb-4">
        <p class="text-white"><%= t('badges.rewards_description') %></p>
      </div>
      <div class="flex justify-center">
        <a href="<%= all_badges_path %>" class="inline-flex items-center px-6 py-3 text-sm font-medium rounded-full text-white bg-white/20 hover:bg-white/30 transition-all focus:outline-none">
          <span><%= t('badges.view_all_badges') %></span>
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
