<div class="min-h-screen bg-gray-900 py-4 sm:py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-tête avec logo et navigation retour -->
    <div class="flex items-center justify-between mb-8">
      <a href="<%= my_badges_path %>" class="text-white hover:text-gray-300 flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Retour aux badges
      </a>
    </div>

    <div id="notification" class="notification p-4 rounded mb-4 hidden"></div>

    <!-- Détails du badge -->
    <div class="bg-gradient-to-r from-gray-800 to-gray-900 rounded-lg shadow-xl overflow-hidden">
      <div class="p-8">
        <div class="flex flex-col md:flex-row items-center md:items-start">
          <!-- Image du badge -->
          <% 
            badge_class = "badge-card #{@badge.badge_type} mx-auto md:mx-0"
            badge_class += " bronze" if @badge.level == "bronze"
            badge_class += " silver" if @badge.level == "silver"
            badge_class += " gold" if @badge.level == "gold"
            
            # Vérifier si l'utilisateur a ce badge
            has_badge = @user_badge.present?
            badge_class += " locked" unless has_badge
          %>
          <div class="<%= badge_class %> w-40 h-40 flex flex-col items-center justify-center mb-6 md:mb-0 md:mr-8">
            <div class="badge-icon w-20 h-20">
              <% case @badge.badge_type %>
              <% when "competitor" %>
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                </svg>
              <% when "engager" %>
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 5v8a2 2 0 01-2 2h-5l-5 4v-4H4a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2zM7 8H5v2h2V8zm2 0h2v2H9V8zm6 0h-2v2h2V8z" clip-rule="evenodd"></path>
                </svg>
              <% when "critic" %>
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"></path>
                </svg>
              <% when "challenger" %>
                <svg fill="currentColor" viewBox="0 0 20 20">
                  <path d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z"></path>
                </svg>
              <% end %>
            </div>
            <div class="badge-name text-lg"><%= @badge.name %></div>
            <div class="badge-level"><%= @badge.level.capitalize %></div>
          </div>

          <!-- Informations du badge -->
          <div class="flex-1">
            <h1 class="text-3xl font-bold text-white mb-2"><%= @badge.name %></h1>
            <div class="flex items-center mb-4">
              <span class="bg-<%= @badge.badge_type == 'competitor' ? 'amber' : (@badge.badge_type == 'engager' ? 'blue' : (@badge.badge_type == 'critic' ? 'red' : 'purple')) %>-600 text-white text-xs font-semibold px-3 py-1 rounded-full mr-2">
                <%= @badge.badge_type.capitalize %>
              </span>
              <span class="bg-gray-700 text-white text-xs font-semibold px-3 py-1 rounded-full">
                Niveau <%= @badge.level.capitalize %>
              </span>
            </div>
            
            <div class="prose prose-invert max-w-none mb-6">
              <p class="text-gray-300"><%= @badge.description %></p>
            </div>

            <div class="bg-gray-800 rounded-lg p-4 mb-6">
              <h3 class="text-lg font-semibold text-white mb-2">Compétence requise</h3>
              <p class="text-gray-300"><%= @badge.points_required %> points de <%= @badge.badge_type.capitalize %></p>
            </div>
          </div>
        </div>

        <!-- Récompense associée -->
        <div class="mt-8 border-t border-gray-700 pt-8">
          <h2 class="text-2xl font-bold text-white mb-4">Récompense</h2>
          
          <div class="bg-gradient-to-r from-amber-600 to-red-600 rounded-lg p-6">
            <div class="flex flex-col md:flex-row items-center">
              <div class="flex-1">
                <h3 class="text-xl font-semibold text-white mb-2">Valeur de la récompense</h3>
                <p class="text-white mb-4"><%= @badge.reward_description %></p>
                
                <% if @user_badge.present? %>
                  <% if @user_badge.claimed_at %>
                    <div class="bg-green-600 text-white text-center py-2 px-4 rounded-lg">
                      Récompense déjà réclamée le <%= @user_badge.claimed_at.strftime("%d/%m/%Y") %>
                    </div>
                  <% elsif @user_badge.earned_at %>
                    <%= button_to claim_reward_path(@user_badge), method: :post, class: "w-full md:w-auto bg-white hover:bg-gray-100 text-amber-600 font-bold py-2 px-6 rounded-lg transition-all duration-300" do %>
                      Réclamer ma récompense
                    <% end %>
                  <% else %>
                    <div class="bg-gray-600 text-white text-center py-2 px-4 rounded-lg">
                      Badge non encore obtenu
                    </div>
                  <% end %>
                <% else %>
                  <div class="bg-gray-600 text-white text-center py-2 px-4 rounded-lg">
                    Connectez-vous et gagnez ce badge pour obtenir cette récompense
                  </div>
                <% end %>
              </div>
              
              <% if @badge.reward_image.present? %>
                <div class="w-full md:w-1/3 mt-4 md:mt-0">
                  <div class="w-full h-48 bg-center bg-cover rounded-lg" style="background-image: url('<%= @badge.reward_image %>')"></div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .badge-card {
    border-radius: 0.75rem;
    padding: 1rem;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    text-align: center;
    background-position: center;
    background-size: cover;
    background-blend-mode: soft-light;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    border: 3px solid transparent;
  }
  
  .badge-card.gold {
    background: linear-gradient(135deg, #ffd700 0%, #ffeb3b 50%, #ffd700 100%);
    box-shadow: 0 4px 12px rgba(255, 215, 0, 0.6);
    border-color: #ffd700;
  }
  
  .badge-card.silver {
    background: linear-gradient(135deg, #c0c0c0 0%, #e0e0e0 50%, #c0c0c0 100%);
    box-shadow: 0 4px 12px rgba(192, 192, 192, 0.6);
    border-color: #c0c0c0;
  }
  
  .badge-card.bronze {
    background: linear-gradient(135deg, #cd7f32 0%, #e8b27d 50%, #cd7f32 100%);
    box-shadow: 0 4px 12px rgba(205, 127, 50, 0.6);
    border-color: #cd7f32;
  }
  
  .badge-card.locked {
    filter: grayscale(70%);
    opacity: 0.8;
    position: relative;
    overflow: hidden;
  }
  
  .badge-icon {
    margin: 0 auto 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    padding: 10px;
  }
  
  .badge-icon svg {
    width: 100%;
    height: 100%;
    color: #333;
    filter: drop-shadow(0px 2px 2px rgba(0, 0, 0, 0.3));
  }
  
  .badge-name {
    font-weight: 700;
    color: #333;
    margin-bottom: 0.25rem;
    text-shadow: 0px 1px 2px rgba(255, 255, 255, 0.8);
  }
  
  .badge-level {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    color: #555;
    background-color: rgba(255, 255, 255, 0.6);
    border-radius: 10px;
    padding: 2px 8px;
    display: inline-block;
  }
  
  /* Styles spécifiques par type */
  .badge-card.competitor {
    border-color: #ff9800;
  }
  
  .badge-card.engager {
    border-color: #2196f3;
  }
  
  .badge-card.critic {
    border-color: #f44336;
  }
  
  .badge-card.challenger {
    border-color: #9c27b0;
  }
</style> 