<div class="min-h-screen bg-gray-900 py-4 sm:py-8" style="position: relative; z-index: 1;">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-tête avec logo -->
    <div class="text-center mb-8">
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center">
          <div class="w-8 h-8 text-yellow-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 15.4l-3.76 2.27 1-4.28-3.32-2.88 4.38-.38L12 6.1l1.71 4.04 4.38.38-3.32 2.88 1 4.28z"/>
            </svg>
          </div>
        </div>
        <h1 class="text-4xl font-bold text-white ml-4">Mes Badges</h1>
      </div>
    </div>

    <!-- Navigation entre les pages de badges -->
    <div class="flex justify-center mb-8">
      <div class="inline-flex rounded-md shadow-sm" role="group">
        <a href="<%= my_badges_path %>" class="px-6 py-3 text-sm font-medium rounded-l-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none">
          Mes badges
        </a>
        <a href="<%= all_badges_path %>" class="px-6 py-3 text-sm font-medium rounded-r-lg text-white bg-gray-700 hover:bg-gray-600 focus:outline-none">
          Tous les badges
        </a>
      </div>
    </div>

    <div id="notification" class="notification p-4 rounded mb-4 hidden"></div>

    <!-- Badges de l'utilisateur -->
    <div class="mb-12">
      <div class="bg-gradient-to-r from-amber-600 to-red-600 rounded-lg p-6 mb-8">
        <h2 class="text-2xl font-light text-white mb-6">Mes badges obtenus</h2>
        <% if @user_badges.any? %>
          <div class="badge-container">
            <% @user_badges.each do |user_badge| %>
              <% badge = user_badge.badge %>
              <% 
                badge_class = "badge-card #{badge.badge_type}"
                badge_class += " bronze" if badge.level == "bronze"
                badge_class += " silver" if badge.level == "silver"
                badge_class += " gold" if badge.level == "gold"
              %>
              <a href="<%= badge_path(badge) %>" class="<%= badge_class %>">
                <div class="badge-icon">
                  <% case badge.badge_type %>
                  <% when "competitor" %>
                    <svg fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                    </svg>
                  <% when "engager" %>
                    <svg fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 5v8a2 2 0 01-2 2h-5l-5 4v-4H4a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2zM7 8H5v2h2V8zm2 0h2v2H9V8zm6 0h-2v2h2V8z" clip-rule="evenodd"></path>
                    </svg>
                  <% when "critic" %>
                    <svg fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"></path>
                    </svg>
                  <% when "challenger" %>
                    <svg fill="currentColor" viewBox="0 0 20 20">
                      <path d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z"></path>
                    </svg>
                  <% end %>
                </div>
                <div class="badge-name"><%= badge.name %></div>
                <div class="badge-level"><%= badge.level.capitalize %></div>
                <div class="badge-points"><%= badge.points_required %> points</div>
                <div class="badge-earned">Obtenu le <%= user_badge.earned_at.strftime("%d/%m/%Y") %></div>
              </a>
            <% end %>
          </div>
        <% else %>
          <div class="empty-badges">
            <p>Vous n'avez pas encore obtenu de badges. Continuez à jouer pour en gagner !</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  .badge-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 1rem;
  }
  
  .badge-card {
    border-radius: 0.75rem;
    padding: 1rem;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    text-align: center;
    background-position: center;
    background-size: cover;
    background-blend-mode: soft-light;
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    border: 3px solid transparent;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .badge-card.gold {
    background: linear-gradient(135deg, #ffd700 0%, #ffeb3b 50%, #ffd700 100%);
    box-shadow: 0 4px 12px rgba(255, 215, 0, 0.6);
    border-color: #ffd700;
  }
  
  .badge-card.silver {
    background: linear-gradient(135deg, #c0c0c0 0%, #e0e0e0 50%, #c0c0c0 100%);
    box-shadow: 0 4px 12px rgba(192, 192, 192, 0.6);
    border-color: #c0c0c0;
  }
  
  .badge-card.bronze {
    background: linear-gradient(135deg, #cd7f32 0%, #e8b27d 50%, #cd7f32 100%);
    box-shadow: 0 4px 12px rgba(205, 127, 50, 0.6);
    border-color: #cd7f32;
  }
  
  .badge-icon {
    width: 50px;
    height: 50px;
    margin: 0 auto 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    padding: 10px;
  }
  
  .badge-icon svg {
    width: 100%;
    height: 100%;
    color: #333;
    filter: drop-shadow(0px 2px 2px rgba(0, 0, 0, 0.3));
  }
  
  .badge-name {
    font-size: 0.85rem;
    font-weight: 700;
    color: #333;
    margin-bottom: 0.25rem;
    text-shadow: 0px 1px 2px rgba(255, 255, 255, 0.8);
  }
  
  .badge-level {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    color: #555;
    background-color: rgba(255, 255, 255, 0.6);
    border-radius: 10px;
    padding: 2px 8px;
    display: inline-block;
    margin-bottom: 0.5rem;
  }
  
  .badge-points {
    font-size: 0.7rem;
    font-weight: 600;
    color: #fff;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 10px;
    padding: 2px 8px;
    display: inline-block;
    margin-bottom: 0.5rem;
  }
  
  .badge-earned {
    font-size: 0.65rem;
    font-weight: 500;
    color: #333;
    background-color: rgba(76, 175, 80, 0.3);
    border-radius: 10px;
    padding: 2px 8px;
    display: inline-block;
  }
  
  .badge-card:hover {
    transform: translateY(-8px) scale(1.05);
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.3);
    z-index: 10;
  }
  
  /* Styles spécifiques par type */
  .badge-card.competitor {
    border-color: #ff9800;
  }
  
  .badge-card.engager {
    border-color: #2196f3;
  }
  
  .badge-card.critic {
    border-color: #f44336;
  }
  
  .badge-card.challenger {
    border-color: #9c27b0;
  }
  
  .empty-badges {
    padding: 1rem;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    text-align: center;
  }
  
  .empty-badges p {
    color: rgba(255, 255, 255, 0.8);
  }
</style> 