<div class="max-w-4xl mx-auto">
  <div class="bg-white rounded-lg shadow-lg p-6">
    <h1 class="text-3xl font-bold mb-8">Import YouTube Playlist</h1>

    <%= form_with(model: [:admin, @playlist], local: true) do |f| %>
      <% if @playlist.errors.any? %>
        <div class="bg-red-50 text-red-500 p-4 rounded-lg mb-6">
          <h2 class="font-bold mb-2"><%= pluralize(@playlist.errors.count, "error") %> prohibited this playlist from being saved:</h2>
          <ul class="list-disc pl-4">
            <% @playlist.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-6">
        <%= f.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= f.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_area :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= label_tag :youtube_playlist_id, "YouTube Playlist ID", class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= text_field_tag :youtube_playlist_id, nil, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", placeholder: "Enter YouTube Playlist ID" %>
        <p class="text-gray-600 text-sm mt-2">
          The Playlist ID is the part after "list=" in a YouTube playlist URL. For example, in "https://www.youtube.com/playlist?list=PL1234567890", the ID is "PL1234567890".
        </p>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "Import Playlist", class: "bg-blue-600 text-white px-6 py-3 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline" %>
        <%= link_to "Back", playlists_path, class: "text-gray-600 hover:text-gray-800" %>
      </div>
    <% end %>
  </div>
</div> 