<div class="min-h-screen bg-gray-900 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-tête avec logo -->
    <div class="text-center mb-12">
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center">
          <div class="w-8 h-8 text-cyan-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5.14v14l11-7-11-7z"/>
            </svg>
          </div>
        </div>
        <h1 class="text-4xl font-bold text-white ml-4">Playlists</h1>
      </div>
      <p class="text-gray-300 max-w-2xl mx-auto">
        Découvrez notre sélection de playlists musicales et votez pour vos chansons préférées.
      </p>
    </div>

    <!-- Notification -->
    <% if flash[:alert] %>
      <div class="bg-red-500 text-white p-4 rounded-lg mb-8 max-w-2xl mx-auto">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="bg-green-500 text-white p-4 rounded-lg mb-8 max-w-2xl mx-auto">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <!-- Section playlists standard -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-800 pb-2">Playlists Standard</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @standard_playlists.each do |playlist| %>
          <div class="group relative rounded-xl overflow-hidden shadow-xl transition-all duration-300 transform hover:-translate-y-2 hover:shadow-2xl">
            <!-- Lien global sur toute la carte si l'utilisateur est connecté -->
            <% if user_signed_in? %>
              <%= link_to new_playlist_game_path(playlist), class: "block absolute inset-0 z-40" do %>
                <span class="sr-only">Jouer à <%= playlist.title %></span>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path, class: "block absolute inset-0 z-40" do %>
                <span class="sr-only">Connexion pour jouer</span>
              <% end %>
            <% end %>
            
            <!-- Image de fond avec overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent z-10"></div>
            <div class="h-64 overflow-hidden">
              <% 
                # Différentes façons d'écrire le nom de fichier
                image_variations = [
                  playlist.title + '.jpg',                                          # Exact match: "This is Pop.jpg"
                  playlist.title.parameterize.underscore + '.jpg',                  # Underscore version: "this_is_pop.jpg"
                  playlist.title.downcase.gsub(' ', '_') + '.jpg',                   # Manual lowercase with underscore: "this_is_pop.jpg"
                  # Variations spécifiques pour certaines playlists
                  playlist.title.parameterize.underscore.gsub('afropop', 'afro_pop') + '.jpg',  # Pour "This is AfroPop"
                  playlist.title.parameterize.underscore.gsub('of_', '') + '.jpg'               # Pour "Best of Reggae"
                ]
                
                # Vérifier quelle variation existe
                found_image = nil
                image_variations.each do |img_name|
                  if File.exist?(Rails.root.join('app', 'assets', 'images', 'playlists', img_name))
                    found_image = img_name
                    break
                  end
                end
              %>
              
              <% if found_image %>
                <%= image_tag "playlists/#{found_image}", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% else %>
                <!-- Utiliser la première image disponible comme image par défaut -->
                <%= image_tag "playlists/This is Pop.jpg", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% end %>
            </div>
            
            <!-- Contenu de la playlist -->
            <div class="absolute inset-0 z-20 flex flex-col justify-end p-6">
              <div>
                <h3 class="text-2xl font-bold text-white mb-1"><%= playlist.title %></h3>
                <% if playlist.genre.present? %>
                  <span class="inline-block bg-gray-800 text-cyan-400 text-xs px-2 py-1 rounded mb-2"><%= playlist.genre %></span>
                <% end %>
                <p class="text-gray-300 text-sm mb-4 line-clamp-2"><%= playlist.description %></p>
              </div>
              
              <div class="flex items-center justify-between">
                <span class="text-gray-400 text-sm"><%= pluralize(playlist.videos.count, 'titre') %></span>
                
                <% if user_signed_in? %>
                  <div class="z-50 relative">
                    <%= link_to new_playlist_game_path(playlist), class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-full text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:from-cyan-600 hover:to-blue-600 transition-all focus:outline-none", onclick: "event.stopPropagation();" do %>
                      <span>Jouer</span>
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                      </svg>
                    <% end %>
                  </div>
                <% else %>
                  <div class="z-50 relative">
                    <%= link_to new_user_session_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-full text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:from-cyan-600 hover:to-blue-600 transition-all focus:outline-none", onclick: "event.stopPropagation();" do %>
                      <span>Connexion</span>
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                      </svg>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Section playlists premium -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-800 pb-2">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-pink-600">Playlists Premium</span>
        <span class="text-sm font-normal text-gray-400 ml-2">500 points requis</span>
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @premium_playlists.each do |playlist| %>
          <div class="group relative rounded-xl overflow-hidden shadow-xl transition-all duration-300 transform hover:-translate-y-2 hover:shadow-2xl">
            <!-- Lien global sur toute la carte si l'utilisateur est connecté et a assez de points -->
            <% if user_signed_in? && current_user.total_points >= 500 %>
              <%= link_to new_playlist_game_path(playlist), class: "block absolute inset-0 z-40" do %>
                <span class="sr-only">Jouer à <%= playlist.title %></span>
              <% end %>
            <% end %>
            
            <!-- Image de fond avec overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent z-10"></div>
            <% if user_signed_in? && current_user.total_points >= 500 %>
              <!-- Aucun filtre pour les utilisateurs avec assez de points -->
            <% else %>
              <!-- Filtre de verrouillage pour les utilisateurs sans assez de points -->
              <div class="absolute inset-0 bg-black/70 z-20 flex flex-col items-center justify-center">
                <svg class="w-12 h-12 text-gray-400 mb-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
                <p class="text-white font-bold text-lg">Contenu Premium</p>
                <p class="text-gray-300 text-sm mt-1">500 points requis pour débloquer</p>
              </div>
            <% end %>
            
            <div class="h-64 overflow-hidden">
              <% 
                # Différentes façons d'écrire le nom de fichier
                image_variations = [
                  playlist.title + '.jpg',                                          # Exact match: "This is Pop.jpg"
                  playlist.title.parameterize.underscore + '.jpg',                  # Underscore version: "this_is_pop.jpg"
                  playlist.title.downcase.gsub(' ', '_') + '.jpg',                   # Manual lowercase with underscore: "this_is_pop.jpg"
                  # Variations spécifiques pour certaines playlists
                  playlist.title.parameterize.underscore.gsub('afropop', 'afro_pop') + '.jpg',  # Pour "This is AfroPop"
                  playlist.title.parameterize.underscore.gsub('of_', '') + '.jpg'               # Pour "Best of Reggae"
                ]
                
                # Vérifier quelle variation existe
                found_image = nil
                image_variations.each do |img_name|
                  if File.exist?(Rails.root.join('app', 'assets', 'images', 'playlists', img_name))
                    found_image = img_name
                    break
                  end
                end
              %>
              
              <% if found_image %>
                <%= image_tag "playlists/#{found_image}", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% else %>
                <!-- Utiliser la première image disponible comme image par défaut -->
                <%= image_tag "playlists/This is Pop.jpg", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% end %>
            </div>
            
            <!-- Contenu de la playlist -->
            <div class="absolute inset-0 z-30 flex flex-col justify-end p-6 <%= 'opacity-50' unless user_signed_in? && current_user.total_points >= 500 %>">
              <div>
                <div class="flex items-center mb-1">
                  <h3 class="text-2xl font-bold text-white mr-2"><%= playlist.title %></h3>
                  <span class="inline-flex items-center bg-purple-900 text-purple-300 text-xs px-2 py-1 rounded">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                    </svg>
                    Premium
                  </span>
                </div>
                <% if playlist.genre.present? %>
                  <span class="inline-block bg-gray-800 text-purple-400 text-xs px-2 py-1 rounded mb-2"><%= playlist.genre %></span>
                <% end %>
                <p class="text-gray-300 text-sm mb-4 line-clamp-2"><%= playlist.description %></p>
              </div>
              
              <div class="flex items-center justify-between">
                <span class="text-gray-400 text-sm"><%= pluralize(playlist.videos.count, 'titre') %></span>
                
                <% if user_signed_in? && current_user.total_points >= 500 %>
                  <div class="z-50 relative">
                    <%= link_to new_playlist_game_path(playlist), class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-full text-white bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 transition-all focus:outline-none", onclick: "event.stopPropagation();" do %>
                      <span>Jouer</span>
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                      </svg>
                    <% end %>
                  </div>
                <% elsif user_signed_in? %>
                  <span class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-full text-white bg-gray-700">
                    <span>Débloquer (<%= current_user.total_points %>/500 pts)</span>
                  </span>
                <% else %>
                  <div class="z-50 relative">
                    <%= link_to new_user_session_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-full text-white bg-gray-700 hover:bg-gray-600 transition-all focus:outline-none", onclick: "event.stopPropagation();" do %>
                      <span>Connexion</span>
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                      </svg>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Section mes playlists (si connecté) -->
    <% if user_signed_in? && @user_playlists&.any? %>
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-800 pb-2">Mes Playlists</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% @user_playlists.each do |playlist| %>
            <div class="group relative rounded-xl overflow-hidden shadow-xl transition-all duration-300 transform hover:-translate-y-2 hover:shadow-2xl">
              <!-- Lien global sur toute la carte -->
              <%= link_to new_playlist_game_path(playlist), class: "block absolute inset-0 z-40" do %>
                <span class="sr-only">Rejouer à <%= playlist.title %></span>
              <% end %>
              
              <!-- Image de fond avec overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent z-10"></div>
              <div class="h-64 overflow-hidden">
                <% 
                  # Différentes façons d'écrire le nom de fichier
                  image_variations = [
                    playlist.title + '.jpg',                                          # Exact match: "This is Pop.jpg"
                    playlist.title.parameterize.underscore + '.jpg',                  # Underscore version: "this_is_pop.jpg"
                    playlist.title.downcase.gsub(' ', '_') + '.jpg',                   # Manual lowercase with underscore: "this_is_pop.jpg"
                    # Variations spécifiques pour certaines playlists
                    playlist.title.parameterize.underscore.gsub('afropop', 'afro_pop') + '.jpg',  # Pour "This is AfroPop"
                    playlist.title.parameterize.underscore.gsub('of_', '') + '.jpg'               # Pour "Best of Reggae"
                  ]
                  
                  # Vérifier quelle variation existe
                  found_image = nil
                  image_variations.each do |img_name|
                    if File.exist?(Rails.root.join('app', 'assets', 'images', 'playlists', img_name))
                      found_image = img_name
                      break
                    end
                  end
                %>
                
                <% if found_image %>
                  <%= image_tag "playlists/#{found_image}", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
                <% else %>
                  <!-- Utiliser la première image disponible comme image par défaut -->
                  <%= image_tag "playlists/This is Pop.jpg", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
                <% end %>
              </div>
              
              <!-- Contenu de la playlist -->
              <div class="absolute inset-0 z-20 flex flex-col justify-end p-6">
                <div>
                  <div class="flex items-center mb-1">
                    <h3 class="text-2xl font-bold text-white mr-2"><%= playlist.title %></h3>
                    <% if playlist.premium? %>
                      <span class="inline-flex items-center bg-purple-900 text-purple-300 text-xs px-2 py-1 rounded">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                        Premium
                      </span>
                    <% end %>
                  </div>
                  <% if playlist.genre.present? %>
                    <span class="inline-block bg-gray-800 text-green-400 text-xs px-2 py-1 rounded mb-2"><%= playlist.genre %></span>
                  <% end %>
                  
                  <!-- Score de l'utilisateur pour cette playlist si disponible -->
                  <% user_score = current_user.scores.find_by(playlist: playlist) %>
                  <% if user_score %>
                    <div class="flex items-center mb-2 text-sm text-gray-300">
                      <span class="bg-green-900 text-green-300 px-2 py-1 rounded mr-2">Score: <%= user_score.points %></span>
                      <span>Joué le <%= user_score.updated_at.strftime("%d/%m/%Y") %></span>
                    </div>
                  <% end %>
                </div>
                
                <div class="flex items-center justify-between">
                  <span class="text-gray-400 text-sm"><%= pluralize(playlist.videos.count, 'titre') %></span>
                  
                  <div class="z-50 relative">
                    <%= link_to new_playlist_game_path(playlist), class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-full text-white bg-gradient-to-r from-green-500 to-teal-500 hover:from-green-600 hover:to-teal-600 transition-all focus:outline-none", onclick: "event.stopPropagation();" do %>
                      <span>Rejouer</span>
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
