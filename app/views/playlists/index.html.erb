                <span class="text-gray-400 text-sm"><%= pluralize(playlist.videos.count, 'titre') %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Section mes playlists (si connecté) -->
    <% if user_signed_in? && @user_playlists&.any? %>
      <div id="my-playlists-section" class="mb-16 playlist-section" style="display: none;">
        <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-800 pb-2">Mes Playlists</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 sm:gap-12">
          <% @user_playlists.each do |playlist| %>
            <div class="group relative rounded-xl overflow-hidden shadow-xl transition-all duration-300 transform hover:-translate-y-2 hover:shadow-2xl mb-6 playlist-card-new-layout">
              <!-- Lien global sur toute la carte si pas encore joué -->
              <% if !current_user.scores.exists?(playlist: playlist) %>
                <%= link_to new_playlist_game_path(playlist), class: "clickable-card" do %>
                  <span style="display: none;">Jouer à <%= playlist.title %></span>
                <% end %>
              <% else %>
                <!-- Overlay pour indiquer que c'est déjà joué -->
                <div class="absolute inset-0 bg-black/60 z-30 flex flex-col items-center justify-center">
                  <svg class="w-12 h-12 text-green-400 mb-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  <p class="text-white font-bold text-lg">Déjà jouée</p>
                  <p class="text-gray-300 text-sm mt-1">Vous avez déjà terminé cette playlist</p>
                </div>
              <% end %>
              
              <!-- Section image (60%) -->
              <div class="playlist-image-section">
                <% 
                  # Différentes façons d'écrire le nom de fichier
                  image_variations = [
                    playlist.title + '.jpg',                                          # Exact match: "This is Pop.jpg"
                    playlist.title.parameterize.underscore + '.jpg',                  # Underscore version: "this_is_pop.jpg"
                    playlist.title.downcase.gsub(' ', '_') + '.jpg',                   # Manual lowercase with underscore: "this_is_pop.jpg"
                    # Variations spécifiques pour certaines playlists
                    playlist.title.parameterize.underscore.gsub('afropop', 'afro_pop') + '.jpg',  # Pour "This is AfroPop"
                    playlist.title.parameterize.underscore.gsub('of_', '') + '.jpg'               # Pour "Best of Reggae"
                  ]
                  
                  # Vérifier quelle variation existe
                  found_image = nil
                  image_variations.each do |img_name|
                    if File.exist?(Rails.root.join('app', 'assets', 'images', 'playlists', img_name))
                      found_image = img_name
                    break
                    end
                  end
                %>
                
                <% if found_image %>
                  <%= image_tag "playlists/#{found_image}", class: "w-full h-full object-cover object-center transition-transform duration-500 group-hover:scale-110" %>
                <% else %>
                  <!-- Utiliser la première image disponible comme image par défaut -->
                  <%= image_tag "playlists/This is Pop.jpg", class: "w-full h-full object-cover object-center transition-transform duration-500 group-hover:scale-110" %>
                <% end %>
              </div>
              
              <!-- Section texte (40%) -->
              <div class="playlist-text-section">
                <div>
                  <div class="flex items-center mb-2 gap-2">
                    <h3 class="text-lg font-bold text-white"><%= playlist.title %></h3>
                    <div class="flex gap-1">
                      <% if playlist.premium? %>
                        <span class="inline-flex items-center text-xs px-2 py-1 rounded font-medium uppercase tracking-wide" style="background-color: #ff00ff !important; color: white !important; border: 3px solid #00ffff !important; box-shadow: 0 4px 8px rgba(255,0,255,0.5); font-size: 12px; padding: 3px 6px; min-width: fit-content;">
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                          </svg>
                          PREMIUM
                        </span>
                      <% end %>
                      
                      <!-- BADGE DÉJÀ JOUÉE -->
                      <% if user_signed_in? && current_user.scores.exists?(playlist: playlist) %>
                        <span class="inline-flex items-center text-xs px-2 py-1 rounded font-medium uppercase tracking-wide" style="background-color: #10b981 !important; color: white !important; border: 2px solid #34d399 !important; box-shadow: 0 2px 4px rgba(16,185,129,0.3); font-size: 11px; padding: 2px 5px; min-width: fit-content;">
                          <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                          </svg>
                          JOUÉE
                        </span>
                      <% end %>
                    </div>
                  </div>
                  <% if playlist.genre.present? %>
                    <span class="inline-block bg-gray-800 text-xs px-2 py-1 rounded mb-2 font-medium uppercase tracking-wide" style="color: #34d399 !important; border: 1px solid #10b981;"><%= playlist.genre %></span>
                  <% end %>
                  
                  <!-- Score de l'utilisateur pour cette playlist si disponible -->
                  <% user_score = current_user.scores.find_by(playlist: playlist) %>
                  <% if user_score %>
                    <div class="flex items-center mb-2 text-sm text-gray-300">
                      <span class="bg-green-900 text-green-300 px-2 py-1 rounded mr-2">Score: <%= user_score.points %></span>
                      <span>Joué le <%= user_score.updated_at.strftime("%d/%m/%Y") %></span>
                    </div>
                  <% end %>
                  
                  <p class="text-gray-300 text-sm line-clamp-2"><%= playlist.description %></p>
                </div>
                
                <div class="flex items-center justify-between mt-2">
                  <span class="text-gray-400 text-sm"><%= pluralize(playlist.videos.count, 'titre') %></span>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Styles pour les z-index personnalisés */
  .z-45 {
    z-index: 45 !important;
  }
  
  .z-50 {
    z-index: 50 !important;
  }
  
  .z-60 {
    z-index: 60 !important;
  }
  
  .z-70 {
    z-index: 70 !important;
  }
  
  /* Style pour les boutons Jouer */
  .play-button {
    position: absolute;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 50 !important;
    background: linear-gradient(to right, #2563eb, #7c3aed);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    transition: all 0.2s;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .play-button:hover {
    background: linear-gradient(to right, #1d4ed8, #6d28d9);
    transform: translateX(-50%) scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }
  
  /* Style pour les liens cliquables */
  .clickable-card {
    position: absolute;
    inset: 0;
    z-index: 40;
    cursor: pointer;
    background: transparent;
    border: none;
    outline: none;
  }
  
  .clickable-card:hover {
    background: rgba(255, 255, 255, 0.05);
  }
  
  /* Styles pour les boutons de filtrage */
  .filter-btn {
    color: #9ca3af;
    background: transparent;
  }
  
  .filter-btn:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
  }
  
  .filter-btn.active {
    color: #ffffff;
    background: #3b82f6;
  }
  
  /* Styles pour uniformiser les images */
  .playlist-image {
    width: 100% !important;
    height: 100% !important;
    object-fit: cover !important;
    object-position: center !important;
  }
  
  .playlist-card-image-container {
    width: 100% !important;
    height: 100% !important;
    overflow: hidden !important;
    position: relative !important;
  }
  
  /* Styles pour garantir la visibilité des textes */
  .playlist-text-content {
    z-index: 80 !important;
    position: relative !important;
  }
  
  .playlist-text-content h3 {
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8) !important;
  }
  
  .playlist-text-content p {
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8) !important;
  }
  
  /* Nouvelle structure pour séparer image et texte */
  .playlist-card-new-layout {
    display: flex !important;
    flex-direction: column !important;
    height: 100% !important;
  }
  
  .playlist-image-section {
    flex: 0 0 60% !important;
    position: relative !important;
    overflow: hidden !important;
  }
  
  .playlist-text-section {
    flex: 0 0 40% !important;
    background: #1f2937 !important;
    padding: 1rem !important;
    display: flex !important;
    flex-direction: column !important;
    justify-content: space-between !important;
  }
  
  .playlist-text-section h3 {
    color: white !important;
    font-weight: bold !important;
    margin-bottom: 0.5rem !important;
  }
  
  .playlist-text-section p {
    color: #d1d5db !important;
    font-size: 0.875rem !important;
    line-height: 1.25rem !important;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const playlistSections = document.querySelectorAll('.playlist-section');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        const filter = this.getAttribute('data-filter');
        
        // Mettre à jour les boutons
        filterButtons.forEach(btn => btn.classList.remove('active'));
        this.classList.add('active');
        
        // Filtrer les sections
        playlistSections.forEach(section => {
          if (filter === 'all') {
            // Afficher toutes les sections sauf "Mes playlists"
            if (section.id === 'my-playlists-section') {
              section.style.display = 'none';
            } else {
              section.style.display = 'block';
            }
          } else if (filter === 'my') {
            // Afficher seulement "Mes playlists"
            if (section.id === 'my-playlists-section') {
              section.style.display = 'block';
            } else {
              section.style.display = 'none';
            }
          }
        });
      });
    });
  });
</script>
