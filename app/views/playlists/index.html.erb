<div class="min-h-screen bg-gray-900 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-tête avec logo -->
    <div class="text-center mb-12">
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center">
          <div class="w-8 h-8 text-cyan-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5.14v14l11-7-11-7z"/>
            </svg>
          </div>
        </div>
        <h1 class="text-4xl font-bold text-white ml-4">Playlists</h1>
      </div>
      <p class="text-gray-300 max-w-2xl mx-auto">
        Découvrez notre sélection de playlists musicales et votez pour vos chansons préférées.
      </p>
    </div>

    <!-- Boutons de filtrage -->
    <div class="flex justify-center mb-8">
      <div class="bg-gray-800 rounded-lg p-1 flex space-x-1">
        <button id="all-playlists-btn" class="filter-btn active px-6 py-2 rounded-md text-sm font-medium transition-all duration-200" data-filter="all">
          Toutes les playlists
        </button>
        <% if user_signed_in? %>
          <button id="my-playlists-btn" class="filter-btn px-6 py-2 rounded-md text-sm font-medium transition-all duration-200" data-filter="my">
            Mes playlists
          </button>
        <% end %>
      </div>
    </div>

    <!-- Notification -->
    <% if flash[:alert] %>
      <div class="bg-red-500 text-white p-4 rounded-lg mb-8 max-w-2xl mx-auto">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <% if flash[:notice] || params[:notice] %>
      <div class="bg-green-500 text-white p-4 rounded-lg mb-8 max-w-2xl mx-auto flex flex-col items-center gap-4">
        <span><%= flash[:notice] || params[:notice] %></span>
      </div>
    <% end %>
    <% if @unlocked_playlist %>
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-white mb-6 border-b border-green-600 pb-2">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-green-400 to-emerald-600">Playlist Premium Débloquée</span>
        </h2>
        <div class="flex justify-center">
          <div class="group relative rounded-xl overflow-hidden shadow-xl transition-all duration-300 transform hover:-translate-y-2 hover:shadow-2xl w-full max-w-md">
            <%= link_to new_playlist_game_path(@unlocked_playlist), class: "clickable-card" do %>
              <span style="display: none;">Jouer à <%= @unlocked_playlist.title %></span>
            <% end %>
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent z-10"></div>
            <div class="h-64 overflow-hidden">
              <% image_variations = [
                @unlocked_playlist.title + '.jpg',
                @unlocked_playlist.title.parameterize.underscore + '.jpg',
                @unlocked_playlist.title.downcase.gsub(' ', '_') + '.jpg',
                @unlocked_playlist.title.parameterize.underscore.gsub('afropop', 'afro_pop') + '.jpg',
                @unlocked_playlist.title.parameterize.underscore.gsub('of_', '') + '.jpg'
              ]
              found_image = nil
              image_variations.each do |img_name|
                if File.exist?(Rails.root.join('app', 'assets', 'images', 'playlists', img_name))
                  found_image = img_name
                  break
                end
              end %>
              <% if found_image %>
                <%= image_tag "playlists/#{found_image}", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% else %>
                <%= image_tag "playlists/This is Pop.jpg", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% end %>
            </div>
            <div class="absolute inset-0 z-30 flex flex-col justify-end p-6">
              <div>
                <div class="flex items-center mb-1">
                  <h3 class="text-2xl font-bold text-white mr-2"><%= @unlocked_playlist.title %></h3>
                  <span class="inline-flex items-center bg-green-900 text-green-300 text-xs px-2 py-1 rounded">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                    </svg>
                    Premium débloquée
                  </span>
                </div>
                <% if @unlocked_playlist.genre.present? %>
                  <span class="inline-block bg-gray-800 text-green-400 text-xs px-2 py-1 rounded mb-2"><%= @unlocked_playlist.genre %></span>
                <% end %>
                <p class="text-gray-300 text-sm mb-4 line-clamp-2"><%= @unlocked_playlist.description %></p>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-gray-400 text-sm"><%= pluralize(@unlocked_playlist.videos.count, 'titre') %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Section playlists premium -->
    <div id="premium-section" class="mb-16 playlist-section">
      <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-800 pb-2">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-pink-600">Playlists Premium</span>
        <span class="text-sm font-normal text-gray-400 ml-2">500 points requis</span>
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% (@unlocked_playlists + @premium_playlists).each do |playlist| %>
          <% is_unlocked = @unlocked_playlists.include?(playlist) %>
          <% unlocked = params[:unlocked_playlist_id].present? && playlist.id.to_s == params[:unlocked_playlist_id].to_s %>
          <% can_access = is_unlocked || (user_signed_in? && current_user.total_points >= 500) || unlocked %>
          
          <div class="group relative rounded-xl overflow-hidden shadow-xl transition-all duration-300 transform hover:-translate-y-2 hover:shadow-2xl">
            <% if can_access %>
              <!-- Lien global sur toute la carte si l'utilisateur peut y accéder -->
              <%= link_to new_playlist_game_path(playlist), class: "clickable-card" do %>
                <span style="display: none;">Jouer à <%= playlist.title %></span>
              <% end %>
            <% end %>
            
            <!-- Image de fond avec overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent z-10"></div>
            <% unless can_access %>
              <!-- Filtre de verrouillage pour les utilisateurs sans assez de points -->
              <div class="absolute inset-0 bg-black/70 z-20 flex flex-col items-center justify-center">
                <svg class="w-12 h-12 text-gray-400 mb-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
                <p class="text-white font-bold text-lg">Contenu Premium</p>
                <p class="text-gray-300 text-sm mt-1">500 points requis pour débloquer</p>
              </div>
            <% end %>
            
            <div class="h-64 overflow-hidden">
              <% 
                # Différentes façons d'écrire le nom de fichier
                image_variations = [
                  playlist.title + '.jpg',
                  playlist.title.parameterize.underscore + '.jpg',
                  playlist.title.downcase.gsub(' ', '_') + '.jpg',
                  playlist.title.parameterize.underscore.gsub('afropop', 'afro_pop') + '.jpg',
                  playlist.title.parameterize.underscore.gsub('of_', '') + '.jpg'
                ]
                found_image = nil
                image_variations.each do |img_name|
                  if File.exist?(Rails.root.join('app', 'assets', 'images', 'playlists', img_name))
                    found_image = img_name
                    break
                  end
                end
              %>
              <% if found_image %>
                <%= image_tag "playlists/#{found_image}", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% else %>
                <%= image_tag "playlists/This is Pop.jpg", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% end %>
            </div>
            <div class="absolute inset-0 z-30 flex flex-col justify-end p-6 <%= 'opacity-50' unless can_access %>" style="pointer-events: none;">
              <div>
                <div class="flex items-center mb-1">
                  <h3 class="text-2xl font-bold text-white mr-2"><%= playlist.title %></h3>
                  <% if is_unlocked %>
                    <span class="inline-flex items-center bg-green-900 text-green-300 text-xs px-2 py-1 rounded">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                      </svg>
                      Débloquée
                    </span>
                  <% else %>
                    <span class="inline-flex items-center bg-purple-900 text-purple-300 text-xs px-2 py-1 rounded">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                      </svg>
                      Premium
                    </span>
                  <% end %>
                </div>
                <% if playlist.genre.present? %>
                  <span class="inline-block bg-gray-800 <%= is_unlocked ? 'text-green-400' : 'text-purple-400' %> text-xs px-2 py-1 rounded mb-2"><%= playlist.genre %></span>
                <% end %>
                <p class="text-gray-300 text-sm mb-4 line-clamp-2"><%= playlist.description %></p>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-gray-400 text-sm"><%= pluralize(playlist.videos.count, 'titre') %></span>
                <% if can_access %>
                  <!-- Pas de bouton ici - la carte entière est cliquable -->
                <% elsif user_signed_in? %>
                  <span class="inline-flex items-center px-4 py-2 text-sm font-medium rounded-full text-white bg-gray-700">
                    <span>Débloquer (<%= current_user.total_points %>/500 pts)</span>
                  </span>
                <% else %>
                  <div class="z-50 relative">
                    <%= link_to new_user_session_path, class: "inline-flex items-center px-4 py-2 text-sm font-medium rounded-full text-white bg-gray-700 hover:bg-gray-600 transition-all focus:outline-none", onclick: "event.stopPropagation();" do %>
                      <span>Connexion</span>
                      <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                      </svg>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Section playlists standard -->
    <div id="standard-section" class="mb-16 playlist-section">
      <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-800 pb-2">Playlists Standard</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @standard_playlists.each do |playlist| %>
          <div class="group relative rounded-xl overflow-hidden shadow-xl transition-all duration-300 transform hover:-translate-y-2 hover:shadow-2xl">
            <!-- Lien global sur toute la carte si l'utilisateur est connecté -->
            <% if user_signed_in? %>
              <%= link_to new_playlist_game_path(playlist), class: "clickable-card" do %>
                <span style="display: none;">Jouer à <%= playlist.title %></span>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path, class: "clickable-card" do %>
                <span style="display: none;">Jouer à <%= playlist.title %></span>
              <% end %>
            <% end %>
            <!-- Image de fond avec overlay -->
            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent z-10"></div>
            <div class="h-64 overflow-hidden">
              <% 
                image_variations = [
                  playlist.title + '.jpg',
                  playlist.title.parameterize.underscore + '.jpg',
                  playlist.title.downcase.gsub(' ', '_') + '.jpg',
                  playlist.title.parameterize.underscore.gsub('afropop', 'afro_pop') + '.jpg',
                  playlist.title.parameterize.underscore.gsub('of_', '') + '.jpg'
                ]
                found_image = nil
                image_variations.each do |img_name|
                  if File.exist?(Rails.root.join('app', 'assets', 'images', 'playlists', img_name))
                    found_image = img_name
                    break
                  end
                end
              %>
              <% if found_image %>
                <%= image_tag "playlists/#{found_image}", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% else %>
                <%= image_tag "playlists/This is Pop.jpg", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
              <% end %>
            </div>
            <!-- Contenu de la playlist -->
            <div class="absolute inset-0 z-20 flex flex-col justify-end p-6" style="pointer-events: none;">
              <div>
                <h3 class="text-2xl font-bold text-white mb-1"><%= playlist.title %></h3>
                <% if playlist.genre.present? %>
                  <span class="inline-block bg-gray-800 text-cyan-400 text-xs px-2 py-1 rounded mb-2"><%= playlist.genre %></span>
                <% end %>
                <p class="text-gray-300 text-sm mb-4 line-clamp-2"><%= playlist.description %></p>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-gray-400 text-sm"><%= pluralize(playlist.videos.count, 'titre') %></span>
              </div>
            </div>
            
            <!-- Bouton Jouer positionné dans le premier quart au milieu bas -->
            <% if user_signed_in? %>
              <!-- Pas de bouton - la carte entière est cliquable -->
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Section mes playlists (si connecté) -->
    <% if user_signed_in? && @user_playlists&.any? %>
      <div id="my-playlists-section" class="mb-16 playlist-section" style="display: none;">
        <h2 class="text-2xl font-bold text-white mb-6 border-b border-gray-800 pb-2">Mes Playlists</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% @user_playlists.each do |playlist| %>
            <div class="group relative rounded-xl overflow-hidden shadow-xl transition-all duration-300 transform hover:-translate-y-2 hover:shadow-2xl">
              <!-- Lien global sur toute la carte -->
              <%= link_to new_playlist_game_path(playlist), class: "clickable-card" do %>
                <span style="display: none;">Jouer à <%= playlist.title %></span>
              <% end %>
              
              <!-- Image de fond avec overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-black via-black/70 to-transparent z-10"></div>
              <div class="h-64 overflow-hidden">
                <% 
                  # Différentes façons d'écrire le nom de fichier
                  image_variations = [
                    playlist.title + '.jpg',                                          # Exact match: "This is Pop.jpg"
                    playlist.title.parameterize.underscore + '.jpg',                  # Underscore version: "this_is_pop.jpg"
                    playlist.title.downcase.gsub(' ', '_') + '.jpg',                   # Manual lowercase with underscore: "this_is_pop.jpg"
                    # Variations spécifiques pour certaines playlists
                    playlist.title.parameterize.underscore.gsub('afropop', 'afro_pop') + '.jpg',  # Pour "This is AfroPop"
                    playlist.title.parameterize.underscore.gsub('of_', '') + '.jpg'               # Pour "Best of Reggae"
                  ]
                  
                  # Vérifier quelle variation existe
                  found_image = nil
                  image_variations.each do |img_name|
                    if File.exist?(Rails.root.join('app', 'assets', 'images', 'playlists', img_name))
                      found_image = img_name
                    break
                    end
                  end
                %>
                
                <% if found_image %>
                  <%= image_tag "playlists/#{found_image}", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
                <% else %>
                  <!-- Utiliser la première image disponible comme image par défaut -->
                  <%= image_tag "playlists/This is Pop.jpg", class: "w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" %>
                <% end %>
              </div>
              
              <!-- Contenu de la playlist -->
              <div class="absolute inset-0 z-20 flex flex-col justify-end p-6" style="pointer-events: none;">
                <div>
                  <div class="flex items-center mb-1">
                    <h3 class="text-2xl font-bold text-white mr-2"><%= playlist.title %></h3>
                    <% if playlist.premium? %>
                      <span class="inline-flex items-center bg-purple-900 text-purple-300 text-xs px-2 py-1 rounded">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                        </svg>
                        Premium
                      </span>
                    <% end %>
                  </div>
                  <% if playlist.genre.present? %>
                    <span class="inline-block bg-gray-800 text-green-400 text-xs px-2 py-1 rounded mb-2"><%= playlist.genre %></span>
                  <% end %>
                  
                  <!-- Score de l'utilisateur pour cette playlist si disponible -->
                  <% user_score = current_user.scores.find_by(playlist: playlist) %>
                  <% if user_score %>
                    <div class="flex items-center mb-2 text-sm text-gray-300">
                      <span class="bg-green-900 text-green-300 px-2 py-1 rounded mr-2">Score: <%= user_score.points %></span>
                      <span>Joué le <%= user_score.updated_at.strftime("%d/%m/%Y") %></span>
                    </div>
                  <% end %>
                </div>
                
                <div class="flex items-center justify-between">
                  <span class="text-gray-400 text-sm"><%= pluralize(playlist.videos.count, 'titre') %></span>
                  
                  <!-- Bouton Jouer positionné dans le premier quart au milieu bas -->
                  <% if user_signed_in? %>
                    <!-- Pas de bouton - la carte entière est cliquable -->
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  @keyframes gradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Styles pour les z-index personnalisés */
  .z-45 {
    z-index: 45 !important;
  }
  
  .z-50 {
    z-index: 50 !important;
  }
  
  /* Style pour les boutons Jouer */
  .play-button {
    position: absolute;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
    z-index: 50 !important;
    background: linear-gradient(to right, #2563eb, #7c3aed);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    transition: all 0.2s;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .play-button:hover {
    background: linear-gradient(to right, #1d4ed8, #6d28d9);
    transform: translateX(-50%) scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }
  
  /* Style pour les liens cliquables */
  .clickable-card {
    position: absolute;
    inset: 0;
    z-index: 45;
    cursor: pointer;
    background: transparent;
    border: none;
    outline: none;
  }
  
  .clickable-card:hover {
    background: rgba(255, 255, 255, 0.05);
  }
  
  /* Styles pour les boutons de filtrage */
  .filter-btn {
    color: #9ca3af;
    background: transparent;
  }
  
  .filter-btn:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
  }
  
  .filter-btn.active {
    color: #ffffff;
    background: #3b82f6;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const playlistSections = document.querySelectorAll('.playlist-section');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        const filter = this.getAttribute('data-filter');
        
        // Mettre à jour les boutons
        filterButtons.forEach(btn => btn.classList.remove('active'));
        this.classList.add('active');
        
        // Filtrer les sections
        playlistSections.forEach(section => {
          if (filter === 'all') {
            // Afficher toutes les sections sauf "Mes playlists"
            if (section.id === 'my-playlists-section') {
              section.style.display = 'none';
            } else {
              section.style.display = 'block';
            }
          } else if (filter === 'my') {
            // Afficher seulement "Mes playlists"
            if (section.id === 'my-playlists-section') {
              section.style.display = 'block';
            } else {
              section.style.display = 'none';
            }
          }
        });
      });
    });
  });
</script>
