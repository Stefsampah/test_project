<div class="min-h-screen bg-gray-900 py-4 sm:py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center">
          <div class="w-8 h-8 text-cyan-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5.14v14l11-7-11-7z"/>
            </svg>
          </div>
        </div>
        <h1 class="text-4xl font-bold text-white ml-4">title</h1>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @playlists.each do |playlist| %>
        <% 
          # Rotation alÃ©atoire entre les couleurs de l'image
          colors = ['bg-purple-600', 'bg-blue-600', 'bg-cyan-400', 'bg-blue-900']
          bg_color = colors[playlist.id % colors.length]
        %>
        <div class="<%= bg_color %> rounded-lg p-8 transform hover:scale-105 transition-all duration-300 flex flex-col justify-between min-h-[200px]">
          <div>
            <h2 class="text-3xl font-light text-white mb-4">Pop</h2>
            <p class="text-white/80 mb-4"><%= playlist.description %></p>
          </div>
          
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <span class="text-sm text-white/80">
                <%= pluralize(playlist.videos.count, 'video') %>
              </span>
            </div>

            <% if user_signed_in? %>
              <%= link_to new_playlist_game_path(playlist), 
                  class: "inline-flex items-center px-6 py-3 text-sm font-medium rounded-full text-white bg-white/20 hover:bg-white/30 transition-all focus:outline-none" do %>
                <span>Commencer</span>
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path, 
                  class: "inline-flex items-center px-6 py-3 text-sm font-medium rounded-full text-white bg-white/20 hover:bg-white/30 transition-all focus:outline-none" do %>
                <span>Se connecter</span>
                <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
                </svg>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
@keyframes gradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}
</style>
