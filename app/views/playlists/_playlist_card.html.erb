<% 
  # Déterminer si la playlist est débloquée
  is_unlocked = false
  if user_signed_in?
    # Vérifier si l'utilisateur a débloqué cette playlist ou s'il a suffisamment de points
    is_unlocked = UserPlaylistUnlock.exists?(user: current_user, playlist: playlist) || 
                  current_user.total_points >= playlist.points_required
  end
  
  # Déterminer si l'utilisateur peut accéder à la playlist
  can_access = !playlist.premium? || is_unlocked
  
  # Déterminer si l'overlay doit s'afficher (pour les playlists premium non débloquées)
  show_overlay = playlist.premium? && !is_unlocked
%>

<div class="playlist-card-uniform">
    <div class="playlist-image-uniform">
      <% if show_overlay %>
        <div class="playlist-overlay-uniform">
          <svg fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
          </svg>
          <div class="overlay-title">Contenu Premium</div>
          <div class="overlay-subtitle">500 points requis pour débloquer</div>
        </div>
      <% end %>
      
      <% thumbnail_id = playlist.videos.first&.youtube_id %>
      <% if thumbnail_id %>
        <!-- Système anti-casse : essayer plusieurs formats YouTube -->
        <img src="https://img.youtube.com/vi/<%= thumbnail_id %>/hqdefault.jpg" 
             alt="<%= playlist.title %>" 
             class="w-full h-full object-cover"
             onerror="this.onerror=null; this.src='https://img.youtube.com/vi/<%= thumbnail_id %>/mqdefault.jpg'; this.onerror=function(){this.onerror=null; this.src='https://img.youtube.com/vi/<%= thumbnail_id %>/default.jpg'; this.onerror=function(){this.onerror=null; this.src='https://img.youtube.com/vi/<%= thumbnail_id %>/0.jpg'; this.onerror=function(){this.style.display='none'; this.nextElementSibling.style.display='flex';}};};};"
             loading="lazy">
        <!-- Fallback SVG si tous les formats YouTube échouent -->
        <div class="w-full h-full bg-gray-700 flex items-center justify-center" style="display: none;">
          <svg class="w-20 h-20 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5.14v14l11-7-11-7z"/>
          </svg>
        </div>
      <% else %>
        <!-- Pas de thumbnail_id -->
        <div class="w-full h-full bg-gray-700 flex items-center justify-center">
          <svg class="w-20 h-20 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M8 5.14v14l11-7-11-7z"/>
          </svg>
        </div>
      <% end %>
    </div>
    
    <div class="playlist-text-uniform">
      <div class="playlist-title-uniform"><%= playlist.title %></div>
      
      <div class="playlist-tags-uniform">
        <% if is_unlocked %>
          <span class="playlist-tag-uniform" style="background-color: #ff0000; color: white;">DÉBLOQUÉE</span>
        <% elsif playlist.premium? %>
          <span class="playlist-tag-uniform" style="background-color: #ff00ff; color: white;">PREMIUM</span>
        <% elsif playlist.exclusive? %>
          <span class="playlist-tag-uniform" style="background-color: #f59e0b; color: white;">EXCLUSIF</span>
        <% end %>
        <% if playlist.category.present? %>
          <span class="playlist-tag-uniform" style="background-color: #374151; color: #9ca3af;"><%= playlist.category.upcase %></span>
        <% end %>
        <% if user_signed_in? && current_user.scores.exists?(playlist: playlist) %>
          <span class="playlist-tag-uniform" style="background-color: #10b981; color: white;">JOUÉE</span>
        <% end %>
      </div>
      
      <div class="playlist-description-uniform"><%= playlist.description %></div>
      
      <div class="playlist-footer-uniform">
        <span><%= pluralize(playlist.videos.count, 'titre') %></span>
      </div>
    </div>
    
    <% if playlist.premium? && !is_unlocked %>
      <!-- Playlist premium non débloquée - pas de lien -->
    <% elsif user_signed_in? %>
      <!-- Playlist accessible - bouton vers le jeu -->
      <button class="absolute inset-0 z-30 bg-transparent border-none cursor-pointer" 
              onclick="window.location.href='<%= new_playlist_game_path(playlist) %>'">
        <span style="display: none;">Jouer à <%= playlist.title %></span>
      </button>
    <% else %>
      <!-- Utilisateur non connecté - bouton vers connexion -->
      <button class="absolute inset-0 z-30 bg-transparent border-none cursor-pointer" 
              onclick="window.location.href='<%= new_user_session_path %>'">
        <span style="display: none;">Se connecter pour jouer à <%= playlist.title %></span>
      </button>
    <% end %>
</div>
