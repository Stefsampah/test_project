<script>
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const playlistSections = document.querySelectorAll('.playlist-section');
    const categoryTags = document.querySelectorAll('.category-tag');
    
    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        const filter = this.getAttribute('data-filter');
        
        // Mettre √† jour les boutons
        filterButtons.forEach(btn => btn.classList.remove('active'));
        this.classList.add('active');
        
        // R√©initialiser les tags de cat√©gories
        categoryTags.forEach(t => {
          t.classList.remove('bg-purple-600', 'text-white');
          t.classList.add('bg-gray-800', 'text-gray-300');
        });
        
        // Filtrer les sections
        playlistSections.forEach(section => {
          if (filter === 'all') {
            // Afficher toutes les sections sauf "Mes playlists"
            if (section.id === 'my-playlists-section') {
              section.style.display = 'none';
            } else {
              section.style.display = 'block';
            }
          } else if (filter === 'my') {
            // Afficher seulement "Mes playlists"
            if (section.id === 'my-playlists-section') {
              section.style.display = 'block';
            } else {
              section.style.display = 'none';
            }
          }
        });
      });
    });
    
    // Gestion des tags de cat√©gories
    categoryTags.forEach(tag => {
      tag.addEventListener('click', function() {
        const category = this.getAttribute('data-category');
        
        // Mettre √† jour les tags - √©tat actif en violet
        categoryTags.forEach(t => {
          t.classList.remove('bg-purple-600', 'text-white');
          t.classList.add('bg-gray-800', 'text-gray-300');
        });
        this.classList.remove('bg-gray-800', 'text-gray-300');
        this.classList.add('bg-purple-600', 'text-white');
        
        // Filtrer les playlists par cat√©gorie
        const allPlaylists = document.querySelectorAll('.playlist-card-new-layout');
        allPlaylists.forEach(playlist => {
          const playlistCategory = playlist.getAttribute('data-category');
          const playlistType = playlist.getAttribute('data-type');
          let shouldShow = false;
          
          if (category === 'Standards') {
            shouldShow = playlistType === 'standard' || !playlistType;
          } else if (category === 'Premium') {
            shouldShow = playlistType === 'premium';
          } else if (category === 'Exclusives') {
            shouldShow = playlistCategory === 'Exclusives';
          } else {
            // Filtrer par cat√©gorie musicale
            const categoryElement = playlist.querySelector('.inline-block');
            const categoryText = categoryElement ? categoryElement.textContent.trim() : '';
            shouldShow = categoryText === category || playlistCategory === category;
          }
          
          // Trouver la section parente
          const parentSection = playlist.closest('.playlist-section');
          if (parentSection && parentSection.id !== 'my-playlists-section') {
            playlist.style.display = shouldShow ? 'block' : 'none';
          }
        });
      });
    });
  });
</script>
