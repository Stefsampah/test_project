      <div class="shorts-video">
        <div id="video-container-<%= @current_video.id %>" style="width: 100%; height: 100%; position: relative;">
          <% 
            # D√©tection Safari mobile c√¥t√© serveur
            is_safari_mobile = request.user_agent.to_s.match?(/iPhone|iPad|iPod/)
            
            # Pour Safari mobile, ne pas charger l'iframe directement (sera charg√©e apr√®s interaction)
