<div class="shorts-container">
  <% if @current_video %>
    <div class="shorts-player"
         data-controller="swipe"
         data-swipe-video-id="<%= @current_video.id %>"
         data-swipe-playlist-id="<%= @playlist.id %>"
         data-swipe-game-id="<%= @game&.id %>">
      
      <div class="shorts-video">
        <iframe
          src="https://www.youtube.com/embed/<%= @current_video.youtube_id %>?autoplay=1&controls=0&modestbranding=1&rel=0&playsinline=1&fs=1&disablekb=1&iv_load_policy=3&cc_load_policy=0&origin=http://localhost:3000&mute=0&showinfo=0"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen="true"
          style="width: 100vw !important; height: calc(100vh - 80px) !important; position: fixed !important; top: 0 !important; left: 0 !important; border: none !important; pointer-events: auto !important; z-index: 1 !important; transform: scale(1.4) !important; transform-origin: center center !important; object-fit: cover !important;">
        </iframe>
      </div>

      <div class="shorts-controls">
        <div class="shorts-info">
          <h3><%= @current_video.title %></h3>
          <p><%= @playlist.title %></p>
        </div>
        
        <div class="shorts-actions">
          <button class="action-btn dislike" data-action="click->swipe#dislike">
            <i class="fas fa-times"></i>
          </button>
          <button class="action-btn like" data-action="click->swipe#like">
            <i class="fas fa-heart"></i>
          </button>
          <button class="action-btn fullscreen" onclick="toggleFullscreen()" title="Mode plein écran">
            <i class="fas fa-expand"></i>
          </button>
        </div>
      </div>
      
    </div>
  <% else %>
    <div class="shorts-end">
      <div class="end-message">
        <h2>Playlist terminée !</h2>
        <%= link_to "Retour aux playlists", playlists_path, class: "end-button" %>
      </div>
    </div>
  <% end %>
</div>

<style>
/* Reset et base */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: #000 !important;
  color: white;
  height: 100vh !important;
  overflow: hidden !important;
  /* Masquer les barres de navigation du navigateur */
  -webkit-overflow-scrolling: touch;
  overscroll-behavior: none;
  margin: 0 !important;
  padding: 0 !important;
}

/* Styles pour masquer les barres de navigation sur mobile */
html {
  height: 100%;
  overflow: hidden;
}

/* Optimisation pour plein écran sur mobile */
@supports (-webkit-touch-callout: none) {
  .shorts-container {
    height: -webkit-fill-available;
  }
  
  .shorts-player {
    height: -webkit-fill-available;
  }
}

/* Container principal */
.shorts-container {
  width: 100vw !important;
  height: 100vh !important;
  display: flex !important;
  justify-content: center !important;
  align-items: center !important;
  background: #000 !important;
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  z-index: 9999 !important;
  margin: 0 !important;
  padding: 0 !important;
}

/* Player vidéo - Plein écran comme les shorts YouTube */

/* Conteneur vidéo */
.shorts-video {
  width: 100%;
  height: 100%;
  position: relative;
}

.shorts-video iframe {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  object-fit: cover;
}

/* Contrôles et overlay - Plus discrets */
.shorts-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 15px 20px 25px 20px; /* Plus d'espace en bas pour les contrôles système */
  background: linear-gradient(transparent, rgba(0,0,0,0.4)); /* Overlay plus léger */
  z-index: 10;
}

/* Informations vidéo */
.shorts-info {
  margin-bottom: 20px;
}

.shorts-info h3 {
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 4px;
  color: #fff;
}

.shorts-info p {
  font-size: 0.9rem;
  color: rgba(255,255,255,0.8);
}

/* Boutons d'action */
.shorts-actions {
  display: flex;
  justify-content: center;
  gap: 24px;
  padding: 16px 0;
}

.action-btn {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  cursor: pointer;
  transition: all 0.3s ease;
  background: rgba(255,255,255,0.1);
  backdrop-filter: blur(8px);
  color: white;
  border: 2px solid rgba(255,255,255,0.1);
}

.action-btn.like {
  background: linear-gradient(45deg, #ff4b8a, #ff6b6b);
}

.action-btn.dislike {
  background: linear-gradient(45deg, #2c3e50, #3498db);
}

.action-btn:hover {
  transform: scale(1.1);
  box-shadow: 0 0 20px rgba(0,0,0,0.3);
}

.action-btn:active {
  transform: scale(0.95);
}

/* Message de fin */
.shorts-end {
  width: 360px;
  height: 640px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #111;
  border-radius: 16px;
}

.end-message {
  text-align: center;
  padding: 20px;
}

.end-message h2 {
  margin-bottom: 20px;
  color: white;
}

.end-button {
  display: inline-block;
  padding: 12px 24px;
  background: linear-gradient(45deg, #ff4b8a, #ff6b6b);
  color: white;
  text-decoration: none;
  border-radius: 25px;
  font-weight: 600;
  transition: all 0.3s ease;
}

.end-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(255,75,138,0.3);
}

/* Responsive - Optimisation pour tous les écrans */
@media (max-width: 768px) {
  /* Mobile - Plein écran FORCÉ */
  .shorts-player,
  .shorts-end {
    width: 100vw !important;
    height: 100vh !important;
    border-radius: 0 !important;
    max-width: none !important;
    max-height: none !important;
  }
  
  .shorts-controls {
    padding: 10px 15px 20px 15px; /* Moins de padding sur mobile */
  }
  
  .action-btn {
    width: 50px;
    height: 50px;
    font-size: 20px;
  }
}

@media (min-width: 769px) and (max-width: 1024px) {
  /* Tablette - Format vertical centré mais plus grand */
  .shorts-player {
    width: 400px;
    height: 700px;
    border-radius: 20px;
    box-shadow: 0 0 30px rgba(0,0,0,0.8);
  }
}

@media (min-width: 1025px) {
  /* Desktop - Format vertical plus grand */
  .shorts-player {
    width: 450px;
    height: 800px;
    border-radius: 25px;
    box-shadow: 0 0 40px rgba(0,0,0,0.9);
  }
  
  .shorts-controls {
    padding: 20px 25px 30px 25px;
  }
  
  .action-btn {
    width: 70px;
    height: 70px;
    font-size: 28px;
  }
}

/* Mode plein écran forcé - TOUJOURS ACTIF */
.shorts-player {
  width: 100vw !important;
  height: 100vh !important;
  border-radius: 0 !important;
  box-shadow: none !important;
  max-width: none !important;
  max-height: none !important;
}

/* Mode plein écran forcé */
.fullscreen-mode .shorts-player {
  width: 100vw !important;
  height: 100vh !important;
  border-radius: 0 !important;
  box-shadow: none !important;
}

/* Style pour le bouton plein écran */
.action-btn.fullscreen {
  background: rgba(0,0,0,0.6);
  border: 2px solid rgba(255,255,255,0.3);
}

.action-btn.fullscreen:hover {
  background: rgba(0,0,0,0.8);
  border-color: rgba(255,255,255,0.6);
}
</style>

<script>
// Fonction pour basculer le mode plein écran
function toggleFullscreen() {
  const container = document.querySelector('.shorts-container');
  const player = document.querySelector('.shorts-player');
  const fullscreenBtn = document.querySelector('.action-btn.fullscreen i');
  
  if (container.classList.contains('fullscreen-mode')) {
    // Sortir du mode plein écran
    container.classList.remove('fullscreen-mode');
    fullscreenBtn.className = 'fas fa-expand';
    
    // Essayer de sortir du plein écran natif si disponible
    if (document.exitFullscreen) {
      document.exitFullscreen();
    } else if (document.webkitExitFullscreen) {
      document.webkitExitFullscreen();
    } else if (document.msExitFullscreen) {
      document.msExitFullscreen();
    }
  } else {
    // Entrer en mode plein écran
    container.classList.add('fullscreen-mode');
    fullscreenBtn.className = 'fas fa-compress';
    
    // Essayer d'activer le plein écran natif
    if (player.requestFullscreen) {
      player.requestFullscreen();
    } else if (player.webkitRequestFullscreen) {
      player.webkitRequestFullscreen();
    } else if (player.msRequestFullscreen) {
      player.msRequestFullscreen();
    }
  }
}

// Gérer les changements de plein écran natif
document.addEventListener('fullscreenchange', function() {
  const container = document.querySelector('.shorts-container');
  const fullscreenBtn = document.querySelector('.action-btn.fullscreen i');
  
  if (!document.fullscreenElement) {
    container.classList.remove('fullscreen-mode');
    if (fullscreenBtn) fullscreenBtn.className = 'fas fa-expand';
  }
});

// Gérer les touches pour le mode plein écran
document.addEventListener('keydown', function(event) {
  if (event.key === 'f' || event.key === 'F') {
    event.preventDefault();
    toggleFullscreen();
  }
});

// Masquer les barres de navigation sur mobile après un délai
setTimeout(function() {
  if ('scrollBehavior' in document.documentElement.style) {
    window.scrollTo(0, 1);
  }
}, 1000);

// Forcer le plein écran immédiatement
document.addEventListener('DOMContentLoaded', function() {
  // Masquer les barres de navigation
  document.body.style.height = '100vh';
  document.body.style.overflow = 'hidden';
  
  // Forcer le plein écran du player
  const player = document.querySelector('.shorts-player');
  if (player) {
    player.style.width = '100vw';
    player.style.height = '100vh';
    player.style.borderRadius = '0';
    player.style.boxShadow = 'none';
  }
  
  // Masquer les barres de navigation du navigateur
  if (window.innerHeight < window.screen.height) {
    document.body.style.height = window.screen.height + 'px';
  }
});
</script>
