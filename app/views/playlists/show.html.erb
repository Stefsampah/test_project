<script>
// Fonction pour basculer le mode plein √©cran
function toggleFullscreen() {
  const container = document.querySelector('.shorts-container');
  const player = document.querySelector('.shorts-player');
  const fullscreenBtn = document.querySelector('.action-btn.fullscreen i');
  
  if (container.classList.contains('fullscreen-mode')) {
    // Sortir du mode plein √©cran
    container.classList.remove('fullscreen-mode');
    fullscreenBtn.className = 'fas fa-expand';
    
    // Essayer de sortir du plein √©cran natif si disponible
    if (document.exitFullscreen) {
      document.exitFullscreen();
    } else if (document.webkitExitFullscreen) {
      document.webkitExitFullscreen();
    } else if (document.msExitFullscreen) {
      document.msExitFullscreen();
    }
  } else {
    // Entrer en mode plein √©cran
    container.classList.add('fullscreen-mode');
    fullscreenBtn.className = 'fas fa-compress';
    
    // Essayer d'activer le plein √©cran natif
    if (player.requestFullscreen) {
      player.requestFullscreen();
    } else if (player.webkitRequestFullscreen) {
      player.webkitRequestFullscreen();
    } else if (player.msRequestFullscreen) {
      player.msRequestFullscreen();
    }
  }
}

// G√©rer les changements de plein √©cran natif
document.addEventListener('fullscreenchange', function() {
  const container = document.querySelector('.shorts-container');
  const fullscreenBtn = document.querySelector('.action-btn.fullscreen i');
  
  if (!document.fullscreenElement) {
    container.classList.remove('fullscreen-mode');
    if (fullscreenBtn) fullscreenBtn.className = 'fas fa-expand';
  }
});

// G√©rer les touches pour le mode plein √©cran
document.addEventListener('keydown', function(event) {
  if (event.key === 'f' || event.key === 'F') {
    event.preventDefault();
    toggleFullscreen();
  }
});

// Masquer les barres de navigation sur mobile apr√®s un d√©lai
setTimeout(function() {
  if ('scrollBehavior' in document.documentElement.style) {
    window.scrollTo(0, 1);
  }
}, 1000);

