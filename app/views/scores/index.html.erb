<!-- Section des scores totaux -->
<div class="min-h-screen bg-gray-900 py-4 sm:py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-tête avec logo -->
    <div class="text-center mb-8">
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center">
          <div class="w-8 h-8 text-cyan-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5.14v14l11-7-11-7z"/>
            </svg>
          </div>
        </div>
        <h1 class="text-4xl font-bold text-white ml-4">Leaderboard</h1>
      </div>
    </div>

    <!-- Scores totaux -->
    <div class="bg-blue-600 rounded-lg p-6 mb-8 transform hover:scale-105 transition-all duration-300">
      <h2 class="text-2xl font-light text-white mb-6">Top Players</h2>
      <div class="space-y-4">
        <% @total_scores.each_with_index do |score, index| %>
          <div class="flex items-center justify-between p-4 bg-white/10 rounded-lg">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-purple-600 rounded-full flex items-center justify-center text-white font-bold mr-4">
                <%= index + 1 %>
              </div>
              <% user = User.find(score[:user_id]) %>
              <% if user.avatar.attached? %>
                <%= image_tag user.avatar, class: "h-12 w-12 rounded-full border-2 border-white/30" %>
              <% else %>
                <div class="h-12 w-12 rounded-full bg-gray-800 border-2 border-white/30 flex items-center justify-center">
                  <span class="text-white text-xl"><%= user.email.first.upcase %></span>
                </div>
              <% end %>
              <span class="ml-4 font-medium text-white"><%= user.email %></span>
            </div>
            <div class="flex items-center space-x-6">
              <div class="text-right">
                <p class="text-sm text-white/80">Total Score</p>
                <p class="text-2xl font-bold text-white"><%= score[:points] %></p>
              </div>
              <div class="flex space-x-2">
                <% score[:badges].each do |badge| %>
                  <span class="px-3 py-1 text-sm font-medium rounded-full bg-white/20 text-white">
                    <%= badge %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Catégories spéciales -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- Top Engager -->
      <div class="bg-purple-600 rounded-lg p-6 transform hover:scale-105 transition-all duration-300">
        <div class="flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <h2 class="text-2xl font-light text-white ml-2">Top Engager</h2>
        </div>
        <div class="space-y-3">
          <% @top_engager_scores.each_with_index do |score, index| %>
            <div class="flex items-center justify-between bg-white/10 rounded-lg p-3">
              <div class="flex items-center">
                <span class="text-white/80 mr-3">#<%= index + 1 %></span>
                <span class="text-white"><%= User.find(score[:user_id]).email %></span>
              </div>
              <span class="text-xl font-bold text-white"><%= score[:points] %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Best Ratio -->
      <div class="bg-blue-600 rounded-lg p-6 transform hover:scale-105 transition-all duration-300">
        <div class="flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <h2 class="text-2xl font-light text-white ml-2">Best Ratio</h2>
        </div>
        <div class="space-y-3">
          <% @best_ratio_scores.each_with_index do |score, index| %>
            <div class="flex items-center justify-between bg-white/10 rounded-lg p-3">
              <div class="flex items-center">
                <span class="text-white/80 mr-3">#<%= index + 1 %></span>
                <span class="text-white"><%= User.find(score[:user_id]).email %></span>
              </div>
              <span class="text-xl font-bold text-white"><%= score[:points] %>%</span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Wise Critic -->
      <div class="bg-cyan-500 rounded-lg p-6 transform hover:scale-105 transition-all duration-300">
        <div class="flex items-center justify-center mb-4">
          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
          </svg>
          <h2 class="text-2xl font-light text-white ml-2">Wise Critic</h2>
        </div>
        <div class="space-y-3">
          <% @wise_critic_scores.each_with_index do |score, index| %>
            <div class="flex items-center justify-between bg-white/10 rounded-lg p-3">
              <div class="flex items-center">
                <span class="text-white/80 mr-3">#<%= index + 1 %></span>
                <span class="text-white"><%= User.find(score[:user_id]).email %></span>
              </div>
              <span class="text-xl font-bold text-white"><%= score[:points] %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Scores par playlist -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @scores_by_playlist.each do |playlist, scores| %>
        <div class="bg-blue-600 rounded-lg p-6 transform hover:scale-105 transition-all duration-300">
          <h3 class="text-2xl font-light text-white mb-4"><%= playlist.title %></h3>
          <div class="space-y-3">
            <% scores.each_with_index do |score, index| %>
              <div class="flex items-center justify-between bg-white/10 rounded-lg p-3">
                <div class="flex items-center">
                  <span class="text-white/80 mr-3">#<%= index + 1 %></span>
                  <% if score.user.avatar.attached? %>
                    <%= image_tag score.user.avatar, class: "h-8 w-8 rounded-full border-2 border-white/30 mr-2" %>
                  <% else %>
                    <div class="h-8 w-8 rounded-full bg-gray-800 border-2 border-white/30 flex items-center justify-center mr-2">
                      <span class="text-white text-sm"><%= score.user.email.first.upcase %></span>
                    </div>
                  <% end %>
                  <span class="text-white"><%= score.user.email %></span>
                </div>
                <span class="text-xl font-bold text-white"><%= score.points %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
@keyframes gradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}
</style>
