<% # DÃ©tection de l'URL de cover %>
<% cover_url =
     if playlist.respond_to?(:cover) && playlist.cover.respond_to?(:attached?) && playlist.cover.attached?
       url_for(playlist.cover)
     elsif playlist.respond_to?(:image) && playlist.image.respond_to?(:attached?) && playlist.image.attached?
       url_for(playlist.image)
     elsif playlist.respond_to?(:cover_url) && playlist.cover_url.present?
       playlist.cover_url
     elsif playlist.respond_to?(:image_url) && playlist.image_url.present?
       playlist.image_url
     elsif playlist.respond_to?(:cover) && playlist.cover.present?
       playlist.cover
     elsif playlist.respond_to?(:image) && playlist.image.present?
       playlist.image
     else
       asset_path('playlists/pop_play.jpg')
     end
%>
<div class="playlist-card group relative rounded-3xl overflow-hidden shadow-2xl transition-all duration-300 hover:scale-105" style="background-image: url('<%= cover_url %>'); background-size: cover; background-position: center;">
  <div class="absolute inset-0 bg-black bg-opacity-60"></div>
  <div class="relative z-10 p-6 flex flex-col items-start w-full">
    <div class="flex items-center gap-3 mb-2">
      <span class="text-3xl">ðŸŽµ</span>
      <h3 class="text-2xl font-bold text-white drop-shadow"><%= playlist.title %></h3>
    </div>
    <%= link_to "Jouer la playlist", new_playlist_game_path(playlist), class: "mt-2 mb-4 px-6 py-2 rounded-full bg-yellow-400 text-black text-lg font-bold shadow-lg hover:bg-yellow-300 transition" %>
    <div class="w-full mt-2">
      <h4 class="text-white text-lg font-semibold mb-2">Top Players</h4>
      <% scores.first(3).each_with_index do |score, idx| %>
        <% user = score.user %>
        <div class="flex items-center justify-between bg-black bg-opacity-40 rounded-xl px-3 py-2 mb-2">
          <div class="flex items-center gap-3">
            <span class="inline-block w-8 h-8 rounded-full bg-gradient-to-br from-purple-400 to-pink-400 flex items-center justify-center text-lg font-bold text-white shadow">
              <% if user.avatar.attached? %>
                <%= image_tag user.avatar, class: "h-8 w-8 rounded-full object-cover" %>
              <% else %>
                <span><%= user.email.first.upcase %></span>
              <% end %>
            </span>
            <span class="text-white font-semibold truncate max-w-[100px]"> <%= user.email %> </span>
          </div>
          <span class="text-xl font-extrabold text-yellow-300"><%= score.points %></span>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to '', new_playlist_game_path(playlist), class: 'absolute inset-0 z-20', style: 'pointer-events: auto;' %>
</div> 