<div class="min-h-screen bg-gray-900 py-4 sm:py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-tête avec logo -->
    <div class="text-center mb-8">
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center">
          <div class="w-8 h-8 text-cyan-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5.14v14l11-7-11-7z"/>
            </svg>
          </div>
        </div>
        <h1 class="text-4xl font-bold text-white ml-4">Résultats</h1>
      </div>
    </div>

    <!-- Score Card -->
    <div class="bg-blue-600 rounded-lg p-8 mb-8 transform hover:scale-105 transition-all duration-300">
      <div class="text-center">
        <h2 class="text-3xl font-light text-white mb-2">What a Beam!</h2>
        <p class="text-xl text-white/80 mb-6">You've made amazing progress in this playlist.</p>
        
        <div class="flex items-center justify-center mb-8">
          <div class="mr-6">
            <% if current_user&.avatar&.attached? %>
              <%= image_tag current_user.avatar, class: "h-24 w-24 rounded-full border-4 border-white/30" %>
            <% else %>
              <div class="h-24 w-24 rounded-full border-4 border-white/30 bg-gray-700 flex items-center justify-center">
                <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
              </div>
            <% end %>
          </div>
          <div>
            <h2 class="text-5xl font-bold text-white mb-2"><%= @score&.points || @game.score %> points</h2>
            <p class="text-2xl font-light text-white/80">Position: <%= @position %>th Place!</p>
          </div>
        </div>

        <!-- Nouvelles métriques alignées avec le système de badges -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-4xl mx-auto mb-8">
          <!-- Win Ratio -->
          <div class="bg-white/10 rounded-lg p-4">
            <div class="flex items-center justify-center mb-2">
              <svg class="w-6 h-6 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
              </svg>
              <h3 class="text-lg font-bold text-white ml-2">Win Ratio</h3>
            </div>
            <div class="text-2xl font-bold text-green-400">
              <%= current_user.win_ratio %>%
            </div>
            <p class="text-white/80 text-sm">de victoires</p>
          </div>

          <!-- Games Played -->
          <div class="bg-white/10 rounded-lg p-4">
            <div class="flex items-center justify-center mb-2">
              <svg class="w-6 h-6 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
              </svg>
              <h3 class="text-lg font-bold text-white ml-2">Parties</h3>
            </div>
            <div class="text-2xl font-bold text-blue-400">
              <%= current_user.games.count %>
            </div>
            <p class="text-white/80 text-sm">jouées</p>
          </div>

          <!-- Top 3 Count -->
          <div class="bg-white/10 rounded-lg p-4">
            <div class="flex items-center justify-center mb-2">
              <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
              </svg>
              <h3 class="text-lg font-bold text-white ml-2">Top 3</h3>
            </div>
            <div class="text-2xl font-bold text-yellow-400">
              <%= current_user.top_3_finishes_count %>
            </div>
            <p class="text-white/80 text-sm">fois</p>
          </div>

          <!-- Unique Playlists -->
          <div class="bg-white/10 rounded-lg p-4">
            <div class="flex items-center justify-center mb-2">
              <svg class="w-6 h-6 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
              </svg>
              <h3 class="text-lg font-bold text-white ml-2">Playlists</h3>
            </div>
            <div class="text-2xl font-bold text-purple-400">
              <%= current_user.unique_playlists_played_count %>
            </div>
            <p class="text-white/80 text-sm">uniques</p>
          </div>
        </div>

        <!-- Progression vers les badges -->
        <div class="bg-white/10 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-4 text-center">Progression vers les badges</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <% current_user.next_badges.each do |badge_type, data| %>
              <% if data[:badge] %>
                <div class="bg-white/5 rounded-lg p-4">
                  <div class="flex items-center justify-between mb-2">
                    <h4 class="text-lg font-semibold text-white"><%= data[:badge].name %></h4>
                    <span class="bg-<%= badge_type == 'competitor' ? 'amber' : (badge_type == 'engager' ? 'blue' : (badge_type == 'critic' ? 'red' : 'purple')) %>-600 text-white px-2 py-1 rounded text-xs">
                      <%= badge_type.capitalize %>
                    </span>
                  </div>
                  <div class="mb-2">
                    <div class="flex justify-between text-sm text-white/80 mb-1">
                      <span>Progression</span>
                      <span><%= data[:current_score] %> / <%= data[:badge].points_required %></span>
                    </div>
                    <div class="w-full bg-gray-700 rounded-full h-2">
                      <% progress = (data[:current_score].to_f / data[:badge].points_required * 100).round %>
                      <div class="bg-<%= badge_type == 'competitor' ? 'amber' : (badge_type == 'engager' ? 'blue' : (badge_type == 'critic' ? 'red' : 'purple')) %>-500 h-2 rounded-full" style="width: <%= [progress, 100].min %>%"></div>
                    </div>
                  </div>
                  <p class="text-xs text-white/60">
                    <% if data[:points_needed] > 0 %>
                      Il vous manque <%= data[:points_needed] %> points
                    <% else %>
                      Badge disponible !
                    <% end %>
                  </p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Songs Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
      <!-- SONGS LIKED -->
      <div class="bg-purple-600 rounded-lg p-6 transform hover:scale-105 transition-all duration-300">
        <h3 class="text-2xl font-light text-white mb-6 text-center">SONGS LIKED</h3>
        <div class="space-y-4">
          <% if @liked_videos.present? %>
            <% @liked_videos.each do |video| %>
              <div class="flex justify-between items-center bg-white/10 rounded-lg p-4">
                <span class="text-white font-medium"><%= video.title %></span>
                <span class="text-white/80">+2 points</span>
              </div>
            <% end %>
          <% else %>
            <div class="text-white/80 text-center">No liked songs yet.</div>
          <% end %>
        </div>
      </div>

      <!-- SONGS NO LIKED -->
      <div class="bg-blue-600 rounded-lg p-6 transform hover:scale-105 transition-all duration-300">
        <h3 class="text-2xl font-light text-white mb-6 text-center">SONGS NO LIKED</h3>
        <div class="space-y-4">
          <% if @not_liked_videos.present? %>
            <% @not_liked_videos.each do |video| %>
              <div class="flex justify-between items-center bg-white/10 rounded-lg p-4">
                <span class="text-white font-medium"><%= video.title %></span>
                <span class="text-white/80">+1 point</span>
              </div>
            <% end %>
          <% else %>
            <div class="text-white/80 text-center">No disliked songs yet.</div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Boutons -->
    <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
      <button onclick="window.location.href='<%= scores_path %>'" 
          class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-full text-white bg-purple-600 hover:bg-purple-700 transition-all focus:outline-none transform hover:scale-105">
        <span>View Party Leaderboard</span>
      </button>

      <button onclick="window.location.href='<%= badges_path %>'" 
          class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-full text-white bg-yellow-600 hover:bg-yellow-700 transition-all focus:outline-none transform hover:scale-105">
        <span>Voir mes badges</span>
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      </button>

      <button onclick="window.location.href='<%= playlists_path %>'" 
          class="inline-flex items-center px-8 py-4 text-lg font-medium rounded-full text-white bg-white/20 hover:bg-white/30 transition-all focus:outline-none transform hover:scale-105">
        <span>Next</span>
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </button>
    </div>


  </div>
</div>

<style>
@keyframes gradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}
</style>
