<div class="min-h-screen bg-gray-900 py-4 sm:py-0">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-tête avec logo -->
    <div class="text-center mb-8">
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center">
          <div class="w-8 h-8 text-cyan-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5.14v14l11-7-11-7z"/>
            </svg>
          </div>
        </div>
        <h1 class="text-2xl font-bold text-white ml-2">Nouvelle Partie</h1>
      </div>
    </div>

    <!-- Carte principale -->
    <div class="bg-blue-600 rounded-lg p-8 transform hover:scale-105 transition-all duration-300">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-light text-white mb-6">
          Prêt à jouer avec la playlist
        </h2>
        <p class="text-4xl font-bold text-white mb-4">
          <%= @playlist.title %>
        </p>
        <p class="text-xl text-white/80">
          Swipez à droite pour aimer, à gauche pour passer
        </p>
      </div>

      <%= form_with(model: [@playlist, @game], local: true, class: "text-center") do |f| %>
        <div class="mt-8">
          <%= f.submit "Commencer", 
              class: "inline-flex items-center px-8 py-4 text-lg font-medium rounded-full text-white bg-white/20 hover:bg-white/30 transition-all focus:outline-none transform hover:scale-105" %>
        </div>
      <% end %>
    </div>

    <!-- Lien retour -->
    <div class="text-center mt-6">
      <%= link_to playlists_path, 
          class: "inline-flex items-center text-white/80 hover:text-white transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Retour aux playlists
      <% end %>
    </div>
  </div>
</div>

<style>
@keyframes gradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}
</style> 