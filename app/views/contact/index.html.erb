        <h2 class="text-2xl font-bold text-white mb-6">Informations de contact</h2>
        
        <!-- Photo de profil -->
        <div class="flex justify-center mb-6">
          <div class="w-32 h-32 rounded-full overflow-hidden border-4 border-purple-500 shadow-lg">
            <% if @contact_photo_url.present? %>
              <%= image_tag @contact_photo_url, alt: "Photo de contact", class: "w-full h-full object-cover", onerror: "this.style.display='none';this.nextElementSibling.style.display='flex';" %>
              <div class="w-full h-full bg-gradient-to-r from-purple-600 to-blue-600 flex items-center justify-center text-white text-4xl font-bold" style="display:none;">
