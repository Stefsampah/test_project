      <div class="bg-gray-800 rounded-lg shadow-xl p-8">
        <h2 class="text-2xl font-bold text-white mb-6">Envoyer un message</h2>
        
        <%= form_with url: contact_path, method: :post, local: true, class: "space-y-6" do |f| %>
          <div>
            <%= f.label :name, "Nom *", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= f.text_field :name, 
                required: true,
                placeholder: "Votre nom",
                class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>

          <div>
            <%= f.label :email, "Email *", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= f.email_field :email, 
                required: true,
                placeholder: "votre.email@example.com",
                class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>

          <div>
            <%= f.label :subject, "Sujet", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= f.text_field :subject, 
                placeholder: "Sujet de votre message (optionnel)",
                class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" %>
          </div>

          <div>
            <%= f.label :message, "Message *", class: "block text-sm font-medium text-gray-300 mb-2" %>
            <%= f.text_area :message, 
                required: true,
                rows: 6,
                placeholder: "Votre message...",
                class: "w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent resize-none" %>
          </div>

          <div>
            <%= f.submit "Envoyer le message", 
                class: "w-full bg-gradient-to-r from-purple-600 to-blue-600 text-white font-bold py-3 px-6 rounded-lg hover:from-purple-700 hover:to-blue-700 transition duration-200 cursor-pointer transform hover:scale-105" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Section suppl√©mentaire (optionnelle) -->
    <div class="bg-gradient-to-r from-purple-600/20 to-blue-600/20 border border-purple-500/30 rounded-lg p-6 text-center">
