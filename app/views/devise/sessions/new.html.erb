<div style="padding: 20px; max-width: 500px; margin: 0 auto; background-color: #333; color: white; border-radius: 10px;">
  <h2 style="text-align: center; margin-bottom: 20px;">Connexion</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: "off" }) do |f| %>
    <% if flash[:alert] %>
      <div style="background-color: #f44336; color: white; padding: 10px; margin-bottom: 15px; border-radius: 5px;">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <div style="margin-bottom: 15px;">
      <%= f.label :email, "Email" %><br />
      <%= f.text_field :email, style: "width: 100%; padding: 8px; background-color: #444; color: white; border: 1px solid #555; border-radius: 4px; margin-top: 5px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= f.label :password, "Mot de passe" %><br />
      <%= f.password_field :password, style: "width: 100%; padding: 8px; background-color: #444; color: white; border: 1px solid #555; border-radius: 4px; margin-top: 5px;" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div style="margin-bottom: 15px;">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Se souvenir de moi" %>
      </div>
    <% end %>

    <div style="margin-bottom: 15px;">
      <button type="submit" style="width: 100%; padding: 10px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer;">
        Se connecter
      </button>
    </div>
  <% end %>

  <div style="text-align: center; margin-top: 15px;">
    <% if devise_mapping.registerable? %>
      <p>
        Vous n'avez pas de compte?
        <%= link_to "S'inscrire", new_registration_path(resource_name), style: "color: #4CAF50;" %>
      </p>
    <% end %>
    
    <% if devise_mapping.recoverable? %>
      <p style="margin-top: 10px;">
        <%= link_to "Mot de passe oubliÃ©?", new_password_path(resource_name), style: "color: #4CAF50;" %>
      </p>
    <% end %>
  </div>
</div> 