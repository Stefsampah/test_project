<div class="min-h-screen bg-gray-900 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-t√™te de la boutique -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-white mb-4">üõçÔ∏è Boutique</h1>
      <p class="text-xl text-gray-300">D√©couvrez nos offres exclusives et d√©bloquez de nouveaux contenus</p>
      
      <!-- Affichage du solde de points -->
      <div class="mt-6 inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full">
        <span class="text-2xl mr-2">üí∞</span>
        <span class="text-white font-semibold text-lg">Votre solde : <%= @user_points %> points</span>
      </div>
    </div>

    <!-- Section Acheter des points -->
    <div class="mb-16">
      <div class="flex items-center mb-8">
        <h2 class="text-3xl font-bold text-white">Acheter des points</h2>
        <span class="ml-3 text-3xl">üí∞</span>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <% @point_packs.each_with_index do |pack, index| %>
          <div class="rounded-xl p-6 border border-gray-700 hover:border-purple-500 transition-all duration-300 transform hover:scale-105 overflow-hidden relative" 
               style="background-image: url('/assets/store/<%= pack[:points] <= 500 ? 'lovepik.png' : 'trove_of_coins.png' %>'); background-size: cover; background-position: center;">
            <!-- Overlay gradient -->
            <div class="absolute inset-0 bg-gradient-to-br from-purple-600/60 to-blue-600/60 rounded-xl"></div>
            
            <div class="relative z-10 text-center">
              <h3 class="text-xl font-semibold text-white mb-2"><%= pack[:name] %></h3>
              <div class="text-3xl font-bold text-purple-400 mb-2"><%= pack[:price] %> ‚Ç¨</div>
              <p class="text-gray-300 text-sm mb-4"><%= pack[:description] %></p>
              
              <%= button_to buy_points_store_path(pack_id: index), 
                          method: :post, 
                          class: "w-full bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-105 relative z-20" do %>
                <span class="flex items-center justify-center">
                  <span class="mr-2">üõí</span>
                  Acheter
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Section Acheter des abonnements -->
    <div class="mb-16">
      <div class="flex items-center mb-8">
        <h2 class="text-3xl font-bold text-white">Acheter des abonnements</h2>
        <span class="ml-3 text-3xl">üéüÔ∏è</span>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @subscriptions.each do |subscription| %>
          <div class="rounded-xl p-8 border border-yellow-500 hover:border-yellow-400 transition-all duration-300 transform hover:scale-105 overflow-hidden relative"
               style="background-image: url('/assets/store/6070880.jpg'); background-size: cover; background-position: center;">
            <!-- Overlay gradient -->
            <div class="absolute inset-0 bg-gradient-to-br from-yellow-600/50 to-orange-600/50 rounded-xl"></div>
            
            <div class="relative z-10 text-center">
              <h3 class="text-2xl font-bold text-white mb-2">Abonnement <%= subscription[:name] %></h3>
              <div class="text-4xl font-bold text-white mb-4"><%= subscription[:price] %> ‚Ç¨</div>
              <p class="text-yellow-100 text-sm mb-6"><%= subscription[:description] %></p>
              
              <%= button_to buy_subscription_store_path(subscription_type: subscription[:name].downcase), 
                          method: :post, 
                          class: "w-full bg-white text-orange-600 font-bold py-3 px-6 rounded-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 relative z-20" do %>
                <span class="flex items-center justify-center">
                  <span class="mr-2">üéüÔ∏è</span>
                  Acheter <%= subscription[:price] %> ‚Ç¨
                </span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Section Acheter des playlists -->
    <div class="mb-16">
      <div class="flex items-center mb-8">
        <h2 class="text-3xl font-bold text-white">Acheter des playlists</h2>
        <span class="ml-3 text-3xl">üé∂</span>
      </div>
      
      <% if @premium_playlists.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @premium_playlists.each do |playlist| %>
            <% is_unlocked = @unlocked_playlists.include?(playlist) %>
            <% # Recherche de l'image associ√©e √† la playlist comme sur playlists/index.html.erb %>
            <% found_image = nil %>
            <% Dir.glob(Rails.root.join('app/assets/images/playlists/*')).each do |img_path| %>
              <% img_name = File.basename(img_path) %>
              <% if img_name.downcase.include?(playlist.title.parameterize(separator: '_').downcase) %>
                <% found_image = img_name %>
                <% break %>
              <% end %>
            <% end %>
            <%= link_to buy_playlist_store_path(playlist), class: "block" do %>
              <div class="rounded-xl p-6 border border-gray-700 hover:border-green-500 transition-all duration-300 transform hover:scale-105 overflow-hidden relative"
                   style="background-image: url('<%= found_image.present? ? asset_path("playlists/#{found_image}") : asset_path("playlists/This is Pop.jpg") %>'); background-size: cover; background-position: center;">
                <!-- Overlay gradient -->
                <div class="absolute inset-0 bg-gradient-to-br from-green-600/50 to-emerald-600/50 rounded-xl"></div>
                
                <!-- Badge d√©j√† achet√©e -->
                <% if is_unlocked %>
                  <div class="absolute top-4 right-4 z-30">
                    <span class="inline-flex items-center text-xs px-2 py-1 rounded font-medium uppercase tracking-wide bg-green-600 text-white border-2 border-green-400">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                      D√âJ√Ä ACHET√âE
                    </span>
                  </div>
                <% end %>
                
                <div class="relative z-10 text-center">
                  <h3 class="text-xl font-semibold text-white mb-2"><%= playlist.title %></h3>
                  <p class="text-gray-300 text-sm mb-4"><%= truncate(playlist.description, length: 100) %></p>
                  
                  <div class="flex items-center justify-center mb-4">
                    <span class="text-2xl mr-2">üí∞</span>
                    <span class="text-green-400 font-bold text-lg"><%= playlist.points_required %> points</span>
                  </div>
                  
                  <% if is_unlocked %>
                    <div class="w-full bg-gray-600 text-gray-300 font-semibold py-3 px-6 rounded-lg inline-block text-center relative z-20">
                      <span class="flex items-center justify-center">
                        <span class="mr-2">‚úì</span>
                        D√©j√† achet√©e
                      </span>
                    </div>
                  <% else %>
                    <div class="w-full bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white font-semibold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-105 inline-block text-center relative z-20">
                      <span class="flex items-center justify-center">
                        <span class="mr-2">üõí</span>
                        Acheter
                      </span>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">üéµ</div>
          <p class="text-gray-400 text-lg">Aucune playlist premium disponible pour le moment.</p>
        </div>
      <% end %>
    </div>

    <% if flash[:notice] %>
      <div class="bg-green-500 text-white p-4 rounded-lg mb-8 max-w-2xl mx-auto flex flex-col items-center gap-4">
        <span><%= flash[:notice].html_safe %></span>
        <%= link_to 'Retour aux playlists', playlists_path, class: 'inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white font-semibold rounded-lg transition-all duration-300 transform hover:scale-105' %>
      </div>
    <% end %>
  </div>
</div>

<style>
