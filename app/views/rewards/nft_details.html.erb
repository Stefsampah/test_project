<style>
/* NFT Card 3D Animation avec ralentissement sur les faces */
.nft-card-3d {
  width: 480px;
  height: 672px;
  position: relative;
  transform-style: preserve-3d;
  animation: cardRotate 6s infinite linear;
  transition: animation-duration 0.3s ease;
  cursor: pointer;
}

/* Ralentissement au survol/contact */
.nft-card-3d:hover,
.nft-card-3d:active {
  animation: cardRotateSlow 12s infinite linear;
}

/* Animation de rotation avec easing sur les faces */
@keyframes cardRotate {
  0%    { transform: rotateY(0deg); }
  15%   { transform: rotateY(90deg); }   /* Rotation rapide jusqu'au milieu */
  35%   { transform: rotateY(90deg); }   /* Ralentissement sur le c√¥t√© */
  50%   { transform: rotateY(180deg); }  /* Milieu de la rotation */
  65%   { transform: rotateY(270deg); }  /* Rotation rapide */
  85%   { transform: rotateY(270deg); }  /* Ralentissement sur l'autre c√¥t√© */
  100%  { transform: rotateY(360deg); }   /* Retour au d√©but */
}

/* Animation ralentie pour hover/click */
@keyframes cardRotateSlow {
  0%    { transform: rotateY(0deg); }
  15%   { transform: rotateY(90deg); }   /* Rotation rapide jusqu'au milieu */
  35%   { transform: rotateY(90deg); }   /* Ralentissement sur le c√¥t√© */
  50%   { transform: rotateY(180deg); }  /* Milieu de la rotation */
  65%   { transform: rotateY(270deg); }  /* Rotation rapide */
  85%   { transform: rotateY(270deg); }  /* Ralentissement sur l'autre c√¥t√© */
  100%  { transform: rotateY(360deg); }   /* Retour au d√©but */
}

.nft-card-face {
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(20px);
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  backface-visibility: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nft-front {
  transform: rotateY(0deg);
}

.nft-back {
  transform: rotateY(180deg);
}

/* Styles pour les vraies images NFT */
.nft-face-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 16px;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
}

/* Responsive */
@media (max-width: 768px) {
  .nft-card-3d {
    width: 160px;
    height: 220px;
  }
}
</style>