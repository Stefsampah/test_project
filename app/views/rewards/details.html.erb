<div class="min-h-screen bg-gray-900 py-4 sm:py-8">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-t√™te -->
    <div class="text-center mb-8">
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center">
          <div class="w-8 h-8 text-cyan-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
        </div>
        <h1 class="text-4xl font-bold text-white ml-4"><%= @reward_name %> - <%= @badge_type.humanize %></h1>
      </div>
    </div>

    <!-- Reward Card -->
    <div class="bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg p-8 mb-8 transform hover:scale-105 transition-all duration-300">
      <div class="text-center">
        <div class="flex items-center justify-center mb-6">
          <% example_badge = Badge.where(badge_type: @badge_type).first %>
          <% if example_badge&.image.present? %>
            <%= image_tag "badges/#{example_badge.image}", class: "w-24 h-24 rounded-full border-4 border-white/30" %>
          <% else %>
            <div class="w-24 h-24 rounded-full border-4 border-white/30 bg-gray-700 flex items-center justify-center">
              <div class="text-white text-4xl">
                <%= case @quantity
                    when 3 then 'üéØ'
                    when 6 then '‚≠ê'
                    when 9 then 'üëë'
                    end %>
              </div>
            </div>
          <% end %>
        </div>
        
        <h2 class="text-3xl font-light text-white mb-4"><%= @reward_description %></h2>
        
        <!-- Niveau et type -->
        <div class="flex items-center justify-center gap-4 mb-6">
          <span class="bg-<%= case @quantity
                              when 3 then 'green'
                              when 6 then 'blue'
                              when 9 then 'purple'
                              end %>-600 text-white px-4 py-2 rounded-full font-semibold">
            <%= case @quantity
                when 3 then 'Challenge'
                when 6 then 'Exclusif'
                when 9 then 'Premium'
                end %>
          </span>
          <span class="bg-<%= @badge_type == 'competitor' ? 'amber' : (@badge_type == 'engager' ? 'blue' : (@badge_type == 'critic' ? 'red' : 'purple')) %>-600 text-white px-4 py-2 rounded-full font-semibold">
            <%= @badge_type.capitalize %>
          </span>
        </div>

        <!-- Progression -->
        <div class="bg-white/10 rounded-lg p-6 mb-6">
          <h3 class="text-xl font-bold text-white mb-4">Progression requise</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <!-- Bronze -->
            <div class="bg-white/10 rounded-lg p-4">
              <div class="flex items-center justify-center mb-2">
                <svg class="w-6 h-6 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-white text-center">Bronze</h4>
              <p class="text-2xl font-bold text-amber-400 text-center">1 pt</p>
              <p class="text-sm text-white/80 text-center">
                Votre progression: <%= @bronze_count %> badge(s)
              </p>
            </div>

            <!-- Silver -->
            <div class="bg-white/10 rounded-lg p-4">
              <div class="flex items-center justify-center mb-2">
                <svg class="w-6 h-6 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-white text-center">Silver</h4>
              <p class="text-2xl font-bold text-gray-400 text-center">2 pts</p>
              <p class="text-sm text-white/80 text-center">
                Votre progression: <%= @silver_count %> badge(s)
              </p>
            </div>

            <!-- Gold -->
            <div class="bg-white/10 rounded-lg p-4">
              <div class="flex items-center justify-center mb-2">
                <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/>
                </svg>
              </div>
              <h4 class="text-lg font-semibold text-white text-center">Gold</h4>
              <p class="text-2xl font-bold text-yellow-400 text-center">3 pts</p>
              <p class="text-sm text-white/80 text-center">
                Votre progression: <%= @gold_count %> badge(s)
              </p>
            </div>
          </div>

          <!-- Progression totale -->
          <div class="mt-6 bg-white/10 rounded-lg p-4">
            <div class="flex items-center justify-between mb-2">
              <span class="text-white font-semibold">Progression totale</span>
              <span class="text-white font-semibold"><%= @current_points %>/<%= @quantity %></span>
            </div>
            <div class="w-full bg-gray-600 rounded-full h-3">
              <div class="bg-gradient-to-r from-blue-500 to-purple-600 h-3 rounded-full transition-all duration-300" 
                   style="width: <%= @progress %>%"></div>
            </div>
            <p class="text-sm text-white/80 text-center mt-2">
              <%= @progress.to_i %>% compl√©t√©
            </p>
          </div>
        </div>

        <!-- R√©compense -->
        <div class="bg-white/10 rounded-lg p-6">
          <h3 class="text-xl font-bold text-white mb-4">R√©compense</h3>
          <div class="flex items-center justify-center mb-4">
            <span class="bg-<%= case @quantity
                                when 3 then 'green'
                                when 6 then 'blue'
                                when 9 then 'purple'
                                end %>-600 text-white px-4 py-2 rounded-full font-semibold">
              <%= case @quantity
                  when 3 then 'Challenge'
                  when 6 then 'Exclusif'
                  when 9 then 'Premium'
                  end %>
            </span>
          </div>
          <p class="text-white text-lg"><%= @reward_description %></p>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
      <%= link_to all_rewards_path, 
          class: "inline-flex items-center px-8 py-4 text-lg font-medium rounded-full text-white bg-white/20 hover:bg-white/30 transition-all focus:outline-none transform hover:scale-105" do %>
        <span>Retour aux r√©compenses</span>
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      <% end %>
    </div>
  </div>
</div> 