    transition: all 0.3s ease;
  }
  
  .reward-card:hover {
    border-color: #8b5cf6;
    box-shadow: 0 20px 25px -5px rgba(139, 92, 246, 0.1), 0 10px 10px -5px rgba(139, 92, 246, 0.04);
    transform: translateY(-5px);
  }
  
  .reward-icon {
    box-shadow: 0 0 15px rgba(139, 92, 246, 0.5);
  }
  

  
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const myRewardsBtn = document.getElementById('my-rewards-btn');
    const allRewardsBtn = document.getElementById('all-rewards-btn');
    const myRewardsSection = document.getElementById('my-rewards-section');
    const standardSection = document.getElementById('standard-section');
    const premiumSection = document.getElementById('premium-section');
    const howToSection = document.querySelector('.bg-gradient-to-r.from-indigo-600.to-purple-600');

    function showMyRewards() {
      // Afficher mes récompenses
      myRewardsSection.style.display = 'block';
      standardSection.style.display = 'none';
      premiumSection.style.display = 'none';
      if (howToSection) howToSection.style.display = 'none';
      
      // Mettre à jour les styles des boutons
      myRewardsBtn.classList.add('bg-blue-600');
      myRewardsBtn.classList.remove('bg-gray-700');
      allRewardsBtn.classList.remove('bg-blue-600');
      allRewardsBtn.classList.add('bg-gray-700');
    }

    function showAllRewards() {
      // Afficher toutes les récompenses
      myRewardsSection.style.display = 'none';
      standardSection.style.display = 'block';
      premiumSection.style.display = 'block';
      if (howToSection) howToSection.style.display = 'block';
      
      // Mettre à jour les styles des boutons
      allRewardsBtn.classList.add('bg-blue-600');
      allRewardsBtn.classList.remove('bg-gray-700');
      myRewardsBtn.classList.remove('bg-blue-600');
      myRewardsBtn.classList.add('bg-gray-700');
    }

    myRewardsBtn.addEventListener('click', showMyRewards);
    allRewardsBtn.addEventListener('click', showAllRewards);

    // Par défaut, afficher mes récompenses
    showMyRewards();
  });
</script> 