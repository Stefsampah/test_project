<div class="min-h-screen bg-gray-900 py-0">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-t√™te avec logo -->
    <div class="text-center mb-4">
      <h1 class="text-2xl font-bold text-white">üèÜ <%= t('rewards.title') %></h1>
    </div>

    <!-- Navigation moderne -->
    <div class="flex justify-center mb-8">
      <div class="flex space-x-2">
        <%= link_to t('rewards.my_rewards'), my_rewards_path, 
            class: "px-4 py-2 rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition-colors" %>
        <%= link_to t('rewards.all_rewards'), all_rewards_path, 
            class: "px-4 py-2 rounded-lg text-sm font-medium text-gray-300 bg-gray-700 hover:bg-gray-600 transition-colors" %>
      </div>
    </div>

    <!-- Bouton pour v√©rifier les r√©compenses -->
    <div class="text-center mb-8">
      <%= link_to t('rewards.check_my_rewards'), unlock_rewards_path, method: :post, 
          class: "bg-gradient-to-r from-yellow-500 to-orange-500 hover:from-yellow-600 hover:to-orange-600 text-white font-bold py-3 px-6 rounded-lg shadow-lg transform hover:scale-105 transition-all duration-200" %>
    </div>

    <!-- Mes r√©compenses d√©bloqu√©es -->
    <div class="mb-12">
      <div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-xl p-6 mb-8">
        <h2 class="text-2xl font-bold text-white mb-6">üéâ <%= t('rewards.my_unlocked_rewards') %></h2>
        
        <% if @unlocked_rewards.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @unlocked_rewards.each do |reward| %>
              <div class="reward-card bg-white/10 backdrop-blur-sm rounded-xl overflow-hidden shadow-lg transform hover:scale-105 transition-all duration-200 h-full flex flex-col">
                <!-- Banni√®re avec image ou d√©grad√© -->
                <div class="h-48 relative">
                  <div class="w-full h-full bg-gradient-to-r from-purple-500 to-pink-600 flex items-center justify-center">
                    <div class="text-white text-4xl">üèÜ</div>
                  </div>
                  <div class="absolute top-3 left-3">
                    <span class="bg-white/20 text-white text-xs px-2 py-1 rounded-full">NEW!</span>
                  </div>
                  <div class="absolute top-3 right-3">
                    <span class="bg-purple-500 text-white text-xs px-2 py-1 rounded-full">D√âBLOQU√â</span>
                  </div>
                </div>
                
                <!-- Contenu de la carte -->
                <div class="p-4 flex-1 flex flex-col">
                  <!-- √âtiquettes -->
                  <div class="flex gap-2 mb-3">
                    <span class="bg-blue-500 text-white text-xs px-3 py-1 rounded-full">
                      <%= case reward.quantity_required
                          when 3 then 'Challenge'
                          when 5 then 'Exclusif'
                          when 10 then 'Premium'
                          end %>
                    </span>
                    <span class="bg-white text-black text-xs px-3 py-1 rounded-full">
                      <%= reward.badge_type.humanize %>
                    </span>
                  </div>
                  
                  <!-- Titre -->
                  <h3 class="text-xl font-bold text-white mb-2">
                    <%= reward.reward_type.humanize %> <%= reward.badge_type.humanize %>
                  </h3>
                  
                  <!-- Description -->
                  <p class="text-gray-300 text-sm mb-4 flex-grow">
                    <%= reward.reward_description %>
                  </p>
                  
                  <!-- D√©tails en bas -->
                  <div class="flex items-center justify-between pt-3 border-t border-gray-600 mt-auto">
                    <span class="text-white text-sm">Niveau <%= reward.badge_type.humanize %></span>
                    <div class="text-center">
                      <div class="text-white font-bold"><%= reward.quantity_required * 100 %></div>
                      <div class="text-gray-400 text-xs">points</div>
                    </div>
                    <%= link_to reward_path(reward), class: "text-blue-400 hover:text-blue-300 text-sm flex items-center" do %>
                      <%= t('rewards.view_details') %> ‚Üí
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12 bg-white/10 backdrop-blur-sm rounded-xl">
            <div class="text-6xl mb-4">üéØ</div>
            <h3 class="text-xl font-bold text-white mb-2"><%= t('rewards.no_rewards_unlocked') %></h3>
            <p class="text-gray-300"><%= t('rewards.collect_badges_message') %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Statistiques -->
    <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
      <h2 class="text-2xl font-bold text-white mb-4">üìä <%= t('rewards.my_statistics') %></h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <% @badge_counts.each do |badge_type, count| %>
          <div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-white"><%= count %></div>
            <div class="text-sm text-gray-200"><%= badge_type.humanize %></div>
          </div>
        <% end %>
      </div>
    </div>
<style>
  /* Harmonisation des titres principaux */
  h1.text-2xl.font-bold.text-white {
    font-size: 1.5rem !important;
    font-weight: 700 !important;
    line-height: 1.2 !important;
  }
</style>

<style>
  .reward-card {
    border: 2px solid transparent;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  .reward-card:hover {
    border-color: #8b5cf6;
    box-shadow: 0 20px 25px -5px rgba(139, 92, 246, 0.1), 0 10px 10px -5px rgba(139, 92, 246, 0.04);
    transform: translateY(-5px);
  }
  
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style> 