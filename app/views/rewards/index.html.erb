<div id="rewards-page" class="min-h-screen bg-gray-900 py-4 sm:py-8">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- En-tête avec logo -->
    <div class="text-center mb-8">
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-gray-800 rounded-full flex items-center justify-center">
          <div class="w-8 h-8 text-purple-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M5 8h2v8H5zm7 0H9v8h3zm5 8h2V8h-2zM8 5h8v2H8z"/>
            </svg>
          </div>
        </div>
        <h1 class="text-4xl font-bold text-white ml-4">Récompenses</h1>
      </div>
      
      <!-- Lien vers les badges -->
      <div class="mt-4">
        <a href="<%= my_badges_path %>" class="inline-flex items-center px-6 py-3 text-sm font-medium rounded-full text-white bg-blue-600 hover:bg-blue-700 transition-all focus:outline-none">
          <span>Voir mes badges</span>
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </div>

    <div id="notification" class="notification p-4 rounded mb-4 hidden"></div>

    <!-- Filtres -->
    <div class="mb-6">
      <div class="flex flex-wrap justify-center gap-2">
        <button id="all-rewards" class="px-4 py-2 rounded-full bg-gray-800 text-white filter-active">Toutes</button>
        <button id="standard-rewards" class="px-4 py-2 rounded-full bg-gray-800 text-white">Standard</button>
        <button id="premium-rewards" class="px-4 py-2 rounded-full bg-gray-800 text-white">Premium</button>
      </div>
    </div>

    <!-- Mes récompenses -->
    <% if user_signed_in? && current_user.user_badges.where.not(claimed_at: nil).exists? %>
      <div class="mb-12">
        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 rounded-lg p-6 mb-8">
          <h2 class="text-2xl font-light text-white mb-6">Mes récompenses</h2>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <% current_user.user_badges.where.not(claimed_at: nil).includes(:badge).each do |user_badge| %>
              <% badge = user_badge.badge %>
              <% if badge.reward_description.present? %>
                <div class="reward-card bg-gradient-to-r from-gray-800 to-gray-900 rounded-lg overflow-hidden shadow-lg">
                  <% if badge.image.present? %>
                    <div class="h-48 overflow-hidden">
                      <img src="<%= asset_path("badges/#{badge.image}") %>" alt="<%= badge.name %>" class="w-full h-full object-cover">
                    </div>
                  <% end %>
                  
                  <div class="p-4">
                    <div class="flex items-center mb-3">
                      <span class="bg-<%= badge.reward_type == 'premium' ? 'purple' : 'blue' %>-600 text-xs font-semibold px-2 py-1 rounded-full text-white mr-2">
                        <%= badge.reward_type == 'premium' ? 'Premium' : 'Standard' %>
                      </span>
                      <span class="text-gray-400 text-xs">Réclamé le <%= user_badge.claimed_at.strftime("%d/%m/%Y") %></span>
                    </div>
                    
                    <h3 class="text-lg font-semibold text-white mb-2"><%= badge.name %></h3>
                    <p class="text-gray-300 text-sm mb-4"><%= badge.reward_description %></p>
                    
                    <div class="flex items-center text-xs text-gray-400">
                      <span class="flex items-center">
                        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        Badge <%= badge.badge_type.capitalize %> <%= badge.level.capitalize %>
                      </span>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Récompenses standard -->
    <div class="mb-12 reward-section" id="standard-section">
      <div class="bg-gradient-to-r from-green-600 to-teal-600 rounded-lg p-6 mb-8">
        <h2 class="text-2xl font-light text-white mb-6">Récompenses Standard</h2>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
          <% Badge.where(reward_type: 'standard').where.not(reward_description: [nil, ""]).order(points_required: :asc).each do |badge| %>
            <div class="reward-card bg-gradient-to-r from-gray-800 to-gray-900 rounded-lg overflow-hidden shadow-lg">
              <% if badge.image.present? %>
                <div class="h-48 overflow-hidden">
                  <img src="<%= asset_path("badges/#{badge.image}") %>" alt="<%= badge.name %>" class="w-full h-full object-cover">
                </div>
              <% end %>
              
              <div class="p-4">
                <div class="flex items-center mb-3">
                  <span class="bg-blue-600 text-xs font-semibold px-2 py-1 rounded-full text-white mr-2">Standard</span>
                  <span class="bg-<%= badge.badge_type == 'competitor' ? 'amber' : (badge.badge_type == 'engager' ? 'blue' : (badge.badge_type == 'critic' ? 'red' : 'purple')) %>-500 text-xs font-semibold px-2 py-1 rounded-full text-white">
                    <%= badge.badge_type.capitalize %>
                  </span>
                </div>
                
                <h3 class="text-lg font-semibold text-white mb-2"><%= badge.name %></h3>
                <p class="text-gray-300 text-sm mb-4"><%= badge.reward_description %></p>
                
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-400">Niveau <%= badge.level.capitalize %></span>
                  <a href="<%= badge_path(badge) %>" class="text-blue-400 hover:text-blue-300 text-xs font-semibold">Voir détails →</a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Récompenses premium -->
    <div class="mb-12 reward-section" id="premium-section">
      <div class="bg-gradient-to-r from-purple-600 to-indigo-600 rounded-lg p-6 mb-8">
        <h2 class="text-2xl font-light text-white mb-6">Récompenses Premium</h2>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
          <% Badge.where(reward_type: 'premium').where.not(reward_description: [nil, ""]).order(points_required: :asc).each do |badge| %>
            <div class="reward-card bg-gradient-to-r from-gray-800 to-gray-900 rounded-lg overflow-hidden shadow-lg">
              <% if badge.image.present? %>
                <div class="h-48 overflow-hidden">
                  <img src="<%= asset_path("badges/#{badge.image}") %>" alt="<%= badge.name %>" class="w-full h-full object-cover">
                </div>
              <% end %>
              
              <div class="p-4">
                <div class="flex items-center mb-3">
                  <span class="bg-purple-600 text-xs font-semibold px-2 py-1 rounded-full text-white mr-2">Premium</span>
                  <span class="bg-<%= badge.badge_type == 'competitor' ? 'amber' : (badge.badge_type == 'engager' ? 'blue' : (badge.badge_type == 'critic' ? 'red' : 'purple')) %>-500 text-xs font-semibold px-2 py-1 rounded-full text-white">
                    <%= badge.badge_type.capitalize %>
                  </span>
                </div>
                
                <h3 class="text-lg font-semibold text-white mb-2"><%= badge.name %></h3>
                <p class="text-gray-300 text-sm mb-4"><%= badge.reward_description %></p>
                
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-400">Niveau <%= badge.level.capitalize %></span>
                  <a href="<%= badge_path(badge) %>" class="text-purple-400 hover:text-purple-300 text-xs font-semibold">Voir détails →</a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Comment obtenir des récompenses -->
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-lg p-6 mb-8">
      <h2 class="text-2xl font-light text-white mb-4">Comment obtenir des récompenses ?</h2>
      <div class="bg-black bg-opacity-20 rounded-lg p-4">
        <p class="text-white mb-4">Les récompenses sont obtenues en gagnant des badges. Chaque badge débloque une récompense spécifique que vous pouvez réclamer.</p>
        <div class="flex justify-center">
          <a href="<%= all_badges_path %>" class="inline-flex items-center px-6 py-3 text-sm font-medium rounded-full text-white bg-white/20 hover:bg-white/30 transition-all focus:outline-none">
            <span>Voir tous les badges disponibles</span>
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .reward-card {
    border: 2px solid transparent;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  .reward-card:hover {
    border-color: #8b5cf6;
    box-shadow: 0 20px 25px -5px rgba(139, 92, 246, 0.1), 0 10px 10px -5px rgba(139, 92, 246, 0.04);
    transform: translateY(-5px);
  }
  
  .reward-icon {
    box-shadow: 0 0 15px rgba(139, 92, 246, 0.5);
  }
  
  .filter-active {
    background-color: #6366f1;
  }
  
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Filtres pour les récompenses
    const allButton = document.getElementById('all-rewards');
    const standardButton = document.getElementById('standard-rewards');
    const premiumButton = document.getElementById('premium-rewards');
    
    const sections = document.querySelectorAll('.reward-section');
    const standardSection = document.getElementById('standard-section');
    const premiumSection = document.getElementById('premium-section');
    
    allButton.addEventListener('click', function() {
      allButton.classList.add('filter-active');
      standardButton.classList.remove('filter-active');
      premiumButton.classList.remove('filter-active');
      
      sections.forEach(section => section.style.display = 'block');
    });
    
    standardButton.addEventListener('click', function() {
      allButton.classList.remove('filter-active');
      standardButton.classList.add('filter-active');
      premiumButton.classList.remove('filter-active');
      
      standardSection.style.display = 'block';
      premiumSection.style.display = 'none';
    });
    
    premiumButton.addEventListener('click', function() {
      allButton.classList.remove('filter-active');
      standardButton.classList.remove('filter-active');
      premiumButton.classList.add('filter-active');
      
      standardSection.style.display = 'none';
      premiumSection.style.display = 'block';
    });
  });
</script> 