        <div class="bg-gradient-to-r from-green-500 to-emerald-600 rounded-lg p-4 text-center">
          <div class="text-3xl font-bold text-white"><%= current_user.user_badges.count %></div>
          <div class="text-sm text-gray-200"><%= t('rewards.badges_collected') %></div>
        </div>
        <div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg p-4 text-center">
          <div class="text-3xl font-bold text-white"><%= current_user.rewards.where(unlocked: true).count %></div>
          <div class="text-sm text-gray-200"><%= t('rewards.rewards_unlocked') %></div>
        </div>
        <div class="bg-gradient-to-r from-yellow-500 to-orange-600 rounded-lg p-4 text-center">
          <div class="text-3xl font-bold text-white"><%= current_user.user_badges.joins(:badge).where(badges: { level: 'gold' }).count %></div>
