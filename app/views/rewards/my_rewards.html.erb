<div class="min-h-screen bg-gradient-to-br from-purple-900 via-blue-900 to-indigo-900">
  <div class="container mx-auto px-4 py-8">
    <!-- Header avec logo -->
    <div class="text-center mb-8">
      <div class="flex items-center justify-center mb-6">
        <div class="w-16 h-16 bg-white/10 backdrop-blur-sm rounded-full flex items-center justify-center">
          <div class="w-8 h-8 text-purple-400">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
              <path d="M5 8h2v8H5zm7 0H9v8h3zm5 8h2V8h-2zM8 5h8v2H8z"/>
            </svg>
          </div>
        </div>
        <h1 class="text-4xl font-bold text-white ml-4">üèÜ Mes R√©compenses</h1>
      </div>
      <p class="text-gray-300 text-lg">D√©bloquez des r√©compenses en combinant vos badges</p>
    </div>

    <!-- Navigation moderne -->
    <div class="flex justify-center mb-8">
      <div class="flex space-x-2">
        <%= link_to "Mes r√©compenses", my_rewards_path, 
            class: "px-4 py-2 rounded-lg text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition-colors" %>
        <%= link_to "Toutes les r√©compenses", all_rewards_path, 
            class: "px-4 py-2 rounded-lg text-sm font-medium text-gray-300 bg-gray-700 hover:bg-gray-600 transition-colors" %>
      </div>
    </div>

    <!-- Progression vers la prochaine r√©compense -->
    <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 mb-8">
      <h2 class="text-2xl font-bold text-white mb-4">üìä Progression</h2>
      <div class="flex items-center justify-between mb-4">
        <div class="text-sm text-gray-300">
          <span class="font-semibold text-white"><%= @total_badges %></span> badges obtenus
        </div>
        <div class="text-sm text-gray-300">
          <% if @next_level && @next_level != 'completed' %>
            Prochaine r√©compense : <span class="font-semibold text-<%= @next_level == 'challenge' ? 'yellow' : @next_level == 'exclusif' ? 'gray' : @next_level == 'premium' ? 'orange' : 'pink' %>-400"><%= @next_level.humanize %></span>
          <% else %>
            <% 
              # V√©rifier si toutes les r√©compenses sont r√©ellement d√©bloqu√©es
              challenge_unlocked = @challenge_rewards.any?
              exclusif_unlocked = @exclusif_rewards.any?
              premium_unlocked = @premium_rewards.any?
              ultime_unlocked = @ultime_rewards.any?
              
              all_unlocked = challenge_unlocked && exclusif_unlocked && premium_unlocked && ultime_unlocked
            %>
            <% if all_unlocked %>
              <span class="text-green-400 font-semibold">Toutes les r√©compenses d√©bloqu√©es !</span>
            <% else %>
              Continuez √† collecter des badges !
            <% end %>
          <% end %>
        </div>
      </div>
      
      <% if @next_level %>
        <div class="w-full bg-gray-700 rounded-full h-2.5">
          <div class="bg-gradient-to-r from-blue-500 to-purple-600 h-2.5 rounded-full" style="width: <%= (@progress[0].to_f / @progress[1] * 100).round %>%"></div>
        </div>
        <div class="text-xs text-gray-400 mt-2">
          <%= @progress[0] %> / <%= @progress[1] %> badges
        </div>
      <% end %>
    </div>

    <!-- R√©compenses par niveau -->
    <div class="mb-8">
      <h2 class="text-2xl font-bold text-white mb-6">üéØ Mes r√©compenses par niveau</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <% [
          { quantity: 3, level: 'challenge', color: 'from-yellow-400 to-yellow-600', icon: 'ü•â', rewards: @challenge_rewards },
          { quantity: 6, level: 'exclusif', color: 'from-gray-400 to-gray-600', icon: 'ü•à', rewards: @exclusif_rewards },
          { quantity: 9, level: 'premium', color: 'from-orange-400 to-orange-600', icon: 'ü•á', rewards: @premium_rewards },
          { quantity: 12, level: 'ultime', color: 'from-pink-400 to-purple-600', icon: 'üåà', rewards: @ultime_rewards }
        ].each do |reward_info| %>
          <% current_count = current_user.user_badges.count %>
          <% progress = [(current_count.to_f / reward_info[:quantity] * 100), 100].min %>
          <% has_reward = reward_info[:rewards].present? && reward_info[:rewards].any? %>
          
          <div class="reward-card bg-gradient-to-r from-gray-700 to-gray-800 rounded-lg overflow-hidden border border-gray-600 transform hover:scale-105 transition-all duration-200">
            <!-- Banni√®re avec image -->
            <div class="h-48 relative">
              <div class="w-full h-full bg-gradient-to-r <%= reward_info[:color] %> flex items-center justify-center">
                <div class="text-white text-4xl">
                  <% if has_reward %>
                    üéÅ
                  <% else %>
                    üîí
                  <% end %>
                </div>
              </div>
              <div class="absolute top-3 left-3">
                <% if has_reward %>
                  <span class="bg-green-500 text-white text-xs px-2 py-1 rounded-full">D√âBLOQU√â</span>
                <% else %>
                  <span class="bg-white/20 text-white text-xs px-2 py-1 rounded-full">VERROUILL√â</span>
                <% end %>
              </div>
              <div class="absolute top-3 right-3">
                <span class="bg-white/20 text-white text-xs px-2 py-1 rounded-full"><%= reward_info[:quantity] %></span>
              </div>
            </div>
            
            <!-- Contenu de la carte -->
            <div class="p-4">
              <!-- En-t√™te avec quantit√© -->
              <div class="text-center mb-4">
                <div class="text-3xl font-bold text-white mb-2"><%= reward_info[:quantity] %></div>
                <div class="text-sm text-gray-300">badges requis</div>
              </div>
              
              <!-- Type de r√©compense -->
              <div class="text-center mb-4">
                <div class="text-lg font-semibold text-white mb-1">
                  <%= reward_info[:icon] %> <%= reward_info[:level].humanize %>
                </div>
                <div class="text-sm text-gray-400">
                  <% if has_reward %>
                    R√©compense surprise
                  <% else %>
                    <%= reward_info[:quantity] %> badges requis
                  <% end %>
                </div>
              </div>
              
              <!-- Barre de progression -->
              <div class="w-full">
                <div class="flex justify-between text-xs text-gray-300 mb-1">
                  <span>Progression</span>
                  <span><%= current_count %>/<%= reward_info[:quantity] %></span>
                </div>
                <div class="w-full bg-gray-700 rounded-full h-2">
                  <div class="bg-gradient-to-r <%= reward_info[:color] %> h-2 rounded-full transition-all duration-300" 
                       style="width: <%= progress %>%"></div>
                </div>
              </div>
              
              <!-- Bouton d√©tails -->
              <div class="mt-4 text-center">
                <% 
                  # Utiliser des routes sp√©cifiques selon le type de r√©compense
                  details_path = case reward_info[:quantity]
                  when 3 then reward_details_path(badge_type: 'unified', quantity: 3)
                  when 6 then reward_details_path(badge_type: 'unified', quantity: 6)
                  when 9 then reward_details_path(badge_type: 'unified', quantity: 9)
                  when 12 then reward_details_path(badge_type: 'unified', quantity: 12)
                  else reward_details_path(badge_type: 'unified', quantity: reward_info[:quantity])
                  end
                %>
                <%= link_to "Voir d√©tails", details_path, class: "bg-gradient-to-r #{reward_info[:color]} text-white px-4 py-2 rounded-lg text-sm font-semibold hover:opacity-90 transition-opacity" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Prochaine r√©compense accessible -->
      <% if @next_accessible_reward %>
        <div class="mt-8">
          <h3 class="text-xl font-bold text-white mb-4">üéØ Prochaine r√©compense accessible</h3>
          <div class="reward-card bg-gradient-to-r from-orange-500 to-orange-600 rounded-lg overflow-hidden border border-orange-400 transform hover:scale-105 transition-all duration-200">
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center">
                  <div class="text-4xl mr-4"><%= @next_accessible_reward[:icon] %></div>
                  <div>
                    <h4 class="text-2xl font-bold text-white"><%= @next_accessible_reward[:name] %></h4>
                    <p class="text-orange-100">R√©compense en cours d'acquisition</p>
                  </div>
                </div>
                <div class="text-right">
                  <div class="text-3xl font-bold text-white"><%= @next_accessible_reward[:current_badges] %>/<%= @next_accessible_reward[:quantity] %></div>
                  <div class="text-sm text-orange-100">badges</div>
                </div>
              </div>
              
              <!-- Barre de progression -->
              <div class="w-full">
                <div class="flex justify-between text-xs text-orange-100 mb-1">
                  <span>Progression</span>
                  <span><%= @next_accessible_reward[:progress_percentage].round %>%</span>
                </div>
                <div class="w-full bg-orange-300 rounded-full h-3">
                  <div class="bg-white h-3 rounded-full transition-all duration-300" 
                       style="width: <%= @next_accessible_reward[:progress_percentage] %>%"></div>
                </div>
              </div>
              
              <div class="mt-4 text-center">
                <span class="bg-white/20 text-white px-4 py-2 rounded-lg text-sm font-semibold">
                  Continuez √† collecter des badges pour d√©bloquer cette r√©compense !
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Statistiques des badges -->
    <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 mb-8">
      <h2 class="text-2xl font-bold text-white mb-4">üìä Statistiques des Badges</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-gradient-to-r from-yellow-500 to-yellow-600 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-white"><%= @bronze_count %></div>
          <div class="text-sm text-gray-200">Bronze</div>
        </div>
        <div class="bg-gradient-to-r from-gray-500 to-gray-600 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-white"><%= @silver_count %></div>
          <div class="text-sm text-gray-200">Silver</div>
        </div>
        <div class="bg-gradient-to-r from-yellow-400 to-yellow-500 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-white"><%= @gold_count %></div>
          <div class="text-sm text-gray-200">Gold</div>
        </div>
        <div class="bg-gradient-to-r from-purple-500 to-pink-600 rounded-lg p-4 text-center">
          <div class="text-2xl font-bold text-white"><%= @total_badges %></div>
          <div class="text-sm text-gray-200">Total</div>
        </div>
      </div>
    </div>

    <!-- Bouton pour v√©rifier les nouvelles r√©compenses -->
    <div class="text-center">
      <%= link_to "üîÑ V√©rifier les Nouvelles R√©compenses", unlock_rewards_path, method: :post, class: "bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-3 rounded-lg font-semibold hover:from-blue-600 hover:to-purple-700 transition duration-200" %>
    </div>
  </div>
</div>

<style>
  .reward-card {
    border: 2px solid transparent;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }
  
  .reward-card:hover {
    border-color: #8b5cf6;
    box-shadow: 0 20px 25px -5px rgba(139, 92, 246, 0.1), 0 10px 10px -5px rgba(139, 92, 246, 0.04);
    transform: translateY(-5px);
  }
  
  @keyframes gradient {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style> 