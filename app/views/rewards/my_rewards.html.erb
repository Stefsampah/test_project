          <% 
            reward_types = [
              { 
                quantity: 3, 
                level: 'challenge', 
                color: 'from-yellow-400 to-yellow-600', 
                icon: 'ü•â',
                content: 'Playlists Sp√©ciales, Versions acoustiques, Remix sp√©ciaux',
                visual: 'https://img.youtube.com/vi/qB7kLilZWwg/maxresdefault.jpg'
              },
              { 
                quantity: 6, 
                level: 'exclusif', 
                color: 'from-gray-400 to-gray-600', 
                icon: 'ü•à',
                content: 'Contenu exclusif des blogs et m√©dias sp√©cialis√©s, podcasts, documentaires, reportages, commentaires audio, vid√©o session studio',
                visual: 'https://img.youtube.com/vi/9ECNWJ1R0fg/maxresdefault.jpg'
              },
              { 
                quantity: 9, 
                level: 'premium', 
                color: 'from-orange-400 to-orange-600', 
                icon: 'ü•á',
                content: 'Rencontres artistes, Backstage virtuel, Sessions priv√©es, Contenu premium exclusif',
                visual: get_premium_preview_image
              },
              { 
                quantity: 12, 
                level: 'ultime', 
                color: 'from-pink-400 to-purple-600', 
                icon: 'üåà',
                content: 'Rencontre priv√©e, Backstage r√©el, Exp√©riences VIP, Acc√®s exclusif total',
                visual: get_ultime_preview_image
              }
            ]
          %>
          
          <% reward_types.each do |reward_info| %>
            <% current_count = current_user.user_badges.count %>
            <% progress = [(current_count.to_f / reward_info[:quantity] * 100), 100].min %>
            <% has_reward = current_user.has_reward_for_level?(reward_info[:level]) %>
            
            <% if has_reward %>
              <% 
                # R√©cup√©rer la vraie r√©compense de l'utilisateur
                user_reward = current_user.rewards.where(reward_type: reward_info[:level], unlocked: true).first
                
                # Cr√©er un hash temporaire pour le helper
                temp_reward = {
                  reward_type: reward_info[:level],
                  unlocked: true,
                  quantity_required: reward_info[:quantity],
                  reward_description: reward_info[:content]
                }
              %>
              <%= link_to reward_details_path(badge_type: 'unified', quantity: reward_info[:quantity]), 
                  style: "text-decoration: none; display: block;", 
                  class: "reward-card-link" do %>
                <%= unified_reward_card(temp_reward, disable_actions: true) %>
              <% end %>
            <% end %>
          <% end %>
        </div>
        
        <!-- Message si aucune r√©compense d√©bloqu√©e -->
        <% if current_user.rewards.where(unlocked: true).count == 0 %>
