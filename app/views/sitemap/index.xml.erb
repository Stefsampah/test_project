<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xhtml="http://www.w3.org/1999/xhtml">
  
  <!-- Page d'accueil -->
  <url>
    <loc><%= @base_url %>/fr</loc>
    <xhtml:link rel="alternate" hreflang="fr" href="<%= @base_url %>/fr" />
    <xhtml:link rel="alternate" hreflang="en" href="<%= @base_url %>/en" />
    <lastmod><%= Time.current.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  
  <url>
    <loc><%= @base_url %>/en</loc>
    <xhtml:link rel="alternate" hreflang="fr" href="<%= @base_url %>/fr" />
    <xhtml:link rel="alternate" hreflang="en" href="<%= @base_url %>/en" />
    <lastmod><%= Time.current.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- Pages principales -->
  <url>
    <loc><%= @base_url %>/fr/playlists</loc>
    <xhtml:link rel="alternate" hreflang="fr" href="<%= @base_url %>/fr/playlists" />
    <xhtml:link rel="alternate" hreflang="en" href="<%= @base_url %>/en/playlists" />
    <lastmod><%= @last_modified.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.9</priority>
  </url>
  
  <url>
    <loc><%= @base_url %>/fr/scores</loc>
    <xhtml:link rel="alternate" hreflang="fr" href="<%= @base_url %>/fr/scores" />
    <xhtml:link rel="alternate" hreflang="en" href="<%= @base_url %>/en/scores" />
    <lastmod><%= Time.current.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>daily</changefreq>
    <priority>0.8</priority>
  </url>
  
  <url>
    <loc><%= @base_url %>/fr/store</loc>
    <xhtml:link rel="alternate" hreflang="fr" href="<%= @base_url %>/fr/store" />
    <xhtml:link rel="alternate" hreflang="en" href="<%= @base_url %>/en/store" />
    <lastmod><%= Time.current.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>
  
  <url>
    <loc><%= @base_url %>/fr/contact</loc>
    <xhtml:link rel="alternate" hreflang="fr" href="<%= @base_url %>/fr/contact" />
    <xhtml:link rel="alternate" hreflang="en" href="<%= @base_url %>/en/contact" />
    <lastmod><%= Time.current.strftime('%Y-%m-%d') %></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
  
  <!-- Playlists individuelles -->
  <% @playlists.each do |playlist| %>
    <url>
      <loc><%= @base_url %>/fr/playlists/<%= playlist.id %></loc>
      <xhtml:link rel="alternate" hreflang="fr" href="<%= @base_url %>/fr/playlists/<%= playlist.id %>" />
      <xhtml:link rel="alternate" hreflang="en" href="<%= @base_url %>/en/playlists/<%= playlist.id %>" />
      <lastmod><%= playlist.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.8</priority>
    </url>
  <% end %>
  
</urlset>

