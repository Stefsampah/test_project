<div class="min-h-screen bg-gray-900 py-0">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- En-tÃªte harmonisÃ© -->
    <div class="text-center mb-4">
      <h1 class="text-2xl font-bold text-white"><%= t('profile.title') %></h1>
    </div>
    
    <!-- En-tÃªte du profil -->
    <div class="bg-gradient-to-r from-purple-800 to-blue-800 rounded-lg p-8 mb-8">
      <div class="flex flex-col md:flex-row items-center">
        <!-- Avatar avec possibilitÃ© de modification -->
        <div class="relative mb-6 md:mb-0 md:mr-8">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, class: "w-32 h-32 rounded-full border-4 border-white/30 object-cover shadow-xl" %>
          <% else %>
            <div class="w-32 h-32 rounded-full border-4 border-white/30 bg-gray-700 flex items-center justify-center shadow-xl">
              <span class="text-white text-4xl font-bold"><%= @user.email.first.upcase %></span>
            </div>
          <% end %>
          
          <!-- Bouton modifier avatar -->
          <button onclick="document.getElementById('avatar-input').click()" 
                  class="absolute bottom-0 right-0 bg-blue-600 hover:bg-blue-700 text-white rounded-full p-2 shadow-lg transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
            </svg>
          </button>
          
          <!-- Input cachÃ© pour upload -->
          <%= form_with url: profile_path, method: :patch, local: true, class: "hidden" do |f| %>
            <%= f.file_field :avatar, id: "avatar-input", accept: "image/*", onchange: "this.form.submit()" %>
          <% end %>
        </div>
        
        <!-- Informations utilisateur -->
        <div class="text-center md:text-left">
          <h2 class="text-4xl font-bold text-white mb-2">
            ğŸ¯ <%= @user.username || @user.email.split('@').first %>
          </h2>
          <p class="text-xl text-white/80 mb-4">
            ğŸ“§ <%= @user.email %>
          </p>
          
          <!-- Statistiques rapides -->
          <div class="flex flex-wrap justify-center md:justify-start gap-4">
            <div class="bg-white/10 rounded-lg px-4 py-2">
              <span class="text-2xl font-bold text-yellow-400"><%= @user.game_points || 0 %></span>
              <span class="text-white/80 text-sm"><%= t('profile.game_points') %></span>
            </div>
            <div class="bg-white/10 rounded-lg px-4 py-2">
              <span class="text-2xl font-bold text-blue-400"><%= @user.games.count %></span>
              <span class="text-white/80 text-sm"><%= t('profile.games') %></span>
            </div>
            <div class="bg-white/10 rounded-lg px-4 py-2">
              <span class="text-2xl font-bold text-purple-400"><%= (@user.playlists_per_day || 0).round(1) %></span>
              <span class="text-white/80 text-sm"><%= t('profile.playlists_per_day') %></span>
            </div>
            <div class="bg-white/10 rounded-lg px-4 py-2">
              <span class="text-2xl font-bold text-purple-400"><%= @badges.count %></span>
              <span class="text-white/80 text-sm"><%= t('profile.badges_label') %></span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Section Mes Badges avec statistiques -->
    <div class="mb-8">
      <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
        <h3 class="text-2xl font-bold text-white mb-4"><%= t('badges.my_badges') %></h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
          <div class="bg-gradient-to-r from-yellow-500 to-yellow-600 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-white"><%= @bronze_count || 0 %></div>
            <div class="text-sm text-gray-200"><%= t('profile.levels.bronze') %></div>
          </div>
          <div class="bg-gradient-to-r from-gray-500 to-gray-600 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-white"><%= @silver_count || 0 %></div>
            <div class="text-sm text-gray-200"><%= t('profile.levels.silver') %></div>
          </div>
          <div class="bg-gradient-to-r from-yellow-400 to-yellow-500 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-white"><%= @gold_count || 0 %></div>
            <div class="text-sm text-gray-200"><%= t('profile.levels.gold') %></div>
          </div>
          <div class="bg-gradient-to-r from-purple-500 to-pink-600 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-white"><%= @total_badges || 0 %></div>
            <div class="text-sm text-gray-200"><%= t('profile.levels.total') %></div>
          </div>
        </div>
        
        <div class="text-center">
          <%= link_to my_badges_path, class: "inline-flex items-center px-6 py-3 bg-white/20 text-white rounded-lg hover:bg-white/30 transition-all font-medium" do %>
            <span><%= t('profile.view_all_my_badges') %></span>
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Section Mes RÃ©compenses avec statistiques -->
    <div class="mb-8">
      <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6">
        <h3 class="text-2xl font-bold text-white mb-4"><%= t('rewards.my_rewards') %></h3>
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4 mb-4">
          <div class="bg-gradient-to-r from-yellow-400 to-orange-600 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-white"><%= @challenge_count || 0 %></div>
            <div class="text-sm text-gray-200"><%= t('profile.reward_types.challenge') %></div>
          </div>
          <div class="bg-gradient-to-r from-purple-400 to-purple-600 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-white"><%= @exclusif_count || 0 %></div>
            <div class="text-sm text-gray-200"><%= t('profile.reward_types.exclusif') %></div>
          </div>
          <div class="bg-gradient-to-r from-purple-500 to-pink-600 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-white"><%= @premium_count || 0 %></div>
            <div class="text-sm text-gray-200"><%= t('profile.reward_types.premium') %></div>
          </div>
          <div class="bg-gradient-to-r from-blue-500 to-blue-700 rounded-lg p-4 text-center">
            <div class="text-2xl font-bold text-white"><%= @ultime_count || 0 %></div>
            <div class="text-sm text-gray-200"><%= t('profile.reward_types.ultime') %></div>
          </div>
          <div class="bg-gradient-to-r from-purple-500 to-pink-600 rounded-lg p-4 text-center md:col-span-2 lg:col-span-1">
            <div class="text-2xl font-bold text-white"><%= @total_rewards || 0 %></div>
            <div class="text-sm text-gray-200"><%= t('rewards.rewards_unlocked') %></div>
          </div>
        </div>
        
        <div class="text-center">
          <%= link_to my_rewards_path, class: "inline-flex items-center px-6 py-3 bg-white/20 text-white rounded-lg hover:bg-white/30 transition-all font-medium" do %>
            <span><%= t('profile.view_my_rewards') %></span>
            <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex justify-center gap-4">
      <button onclick="window.location.href='<%= playlists_path %>'" 
          class="inline-flex items-center px-6 py-3 text-lg font-medium rounded-full text-white bg-blue-600 hover:bg-blue-700 transition-all">
        <span>ğŸµ <%= t('profile.play') %></span>
      </button>
      
      <button onclick="window.location.href='<%= scores_path %>'" 
          class="inline-flex items-center px-6 py-3 text-lg font-medium rounded-full text-white bg-purple-600 hover:bg-purple-700 transition-all">
        <span>ğŸ† <%= t('nav.scores') %></span>
      </button>
      
      <button onclick="window.location.href='<%= my_badges_path %>'" 
          class="inline-flex items-center px-6 py-3 text-lg font-medium rounded-full text-white bg-yellow-600 hover:bg-yellow-700 transition-all">
        <span>ğŸ… <%= t('nav.badges') %></span>
      </button>
    </div>
  </div>
</div>

<style>
  /* Harmonisation des titres principaux */
  h1.text-2xl.font-bold.text-white {
    font-size: 1.5rem !important;
    font-weight: 700 !important;
    line-height: 1.2 !important;
  }
</style>

<script>
  // Auto-submit du formulaire d'avatar
  document.getElementById('avatar-input')?.addEventListener('change', function() {
    this.form.submit();
  });
</script> 