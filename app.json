{
  "name": "test_project_rails_app",
  "description": "Application Rails avec système de récompenses et badges",
  "repository": "https://github.com/votre-username/test_project",
  "logo": "",
  "keywords": ["rails", "ruby", "music", "badges", "rewards"],
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ],
  "env": {
    "RAILS_ENV": {
      "description": "Environnement Rails",
      "value": "production"
    },
    "SECRET_KEY_BASE": {
      "description": "Clé secrète Rails pour la production",
      "generator": "secret"
    },
    "PAYPAL_CLIENT_ID": {
      "description": "Client ID PayPal (sandbox ou live)",
      "value": "votre_client_id_paypal"
    },
    "PAYPAL_CLIENT_SECRET": {
      "description": "Client Secret PayPal (sandbox ou live)",
      "value": "votre_client_secret_paypal"
    },
    "PAYPAL_MODE": {
      "description": "Mode PayPal (sandbox ou live)",
      "value": "sandbox"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    } 
  },
  "buildpacks": [
    {
      "url": "heroku/ruby"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "stack": "heroku-22",
  "scripts": {
    "postdeploy": "bundle exec rails db:migrate"
  }
}
